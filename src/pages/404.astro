---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Page Not Found - LC Container"
  description="The page you're looking for doesn't exist. Browse our container services or contact us for assistance."
>
  <Header />
  
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-50 to-secondary-50 py-20">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-2xl mx-auto">
        <!-- 404 Icon -->
        <div class="mb-8">
          <div class="w-32 h-32 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-16 h-16 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.47-.881-6.08-2.33"></path>
            </svg>
          </div>
        </div>
        
        <!-- Error Message -->
        <h1 class="text-6xl md:text-8xl font-bold text-primary-600 mb-4">404</h1>
        <h2 class="text-3xl md:text-4xl font-bold text-secondary-900 mb-6">
          Page Not Found
        </h2>
        <p class="text-xl text-secondary-600 mb-8 max-w-lg mx-auto">
          Sorry, the page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
        </p>
        
        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <a 
            href="/" 
            class="bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-primary-700 transition-colors"
          >
            Go Home
          </a>
          <a 
            href="/contact" 
            class="border-2 border-primary-600 text-primary-600 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-primary-600 hover:text-white transition-colors"
          >
            Contact Us
          </a>
        </div>
        
        <!-- Popular Pages -->
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="text-2xl font-bold text-secondary-900 mb-6">
            Popular Pages
          </h3>
          <div class="grid md:grid-cols-2 gap-4">
            <a 
              href="/services" 
              class="block p-4 border border-secondary-200 rounded-lg hover:border-primary-300 hover:bg-primary-50 transition-colors text-left"
            >
              <div class="font-semibold text-secondary-900 mb-1">Our Services</div>
              <div class="text-sm text-secondary-600">Container sales, leasing, and custom builds</div>
            </a>
            <a 
              href="/about" 
              class="block p-4 border border-secondary-200 rounded-lg hover:border-primary-300 hover:bg-primary-50 transition-colors text-left"
            >
              <div class="font-semibold text-secondary-900 mb-1">About Us</div>
              <div class="text-sm text-secondary-600">Learn about our 20+ years in business</div>
            </a>

            <a 
              href="tel:2145244168" 
              class="block p-4 border border-secondary-200 rounded-lg hover:border-primary-300 hover:bg-primary-50 transition-colors text-left"
            >
              <div class="font-semibold text-secondary-900 mb-1">Call Us</div>
              <div class="text-sm text-secondary-600">(214) 524-4168</div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <Footer />
</BaseLayout>
