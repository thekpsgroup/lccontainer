---
import BusinessHours from "../components/BusinessHours.astro";
import CTAButton from "../components/CTAButton.astro";
import ExitIntentPopup from "../components/ExitIntentPopup.astro";
import FAQ from "../components/FAQ.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import EnhancedLocalBusinessSchema from "../components/seo/EnhancedLocalBusinessSchema.astro";
import SEOEnhancer from "../components/SEOEnhancer.astro";
import ServicesTeaser from "../components/ServicesTeaser.astro";
import StatsSection from "../components/StatsSection.astro";
import Testimonials from "../components/Testimonials.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="LC Container — Texas' Best Container Company | #1 in DFW Since 2003"
  description="Texas' premier container company since 2003. Best prices, largest inventory (1,000+ containers), fastest delivery in Dallas-Fort Worth and throughout Texas. New & used containers, same-day delivery, expert custom modifications. Serving DFW, Houston, Austin, San Antonio. Call (214) 524-4168."
>
  <SEOEnhancer pageType="home" focusKeyword="shipping containers Texas" />
  <EnhancedLocalBusinessSchema />
  <Header />
  <Hero />
  <ServicesTeaser />

  <StatsSection />
  <Testimonials />
  
  <!-- Final CTA -->
  <section class="max-w-[1200px] mx-auto px-6 md:px-8 py-16 md:py-20">
    <div class="border border-grey-800 bg-gradient-to-br from-black to-grey-900 text-white p-10 md:p-14 text-center rounded-lg shadow-2xl">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">
        Ready to Get Your Container?
      </h2>
      <p class="text-lg text-grey-300 mb-8 max-w-2xl mx-auto leading-relaxed">
        Call now for immediate pricing. Same-day delivery available. Thousands of containers in stock.
      </p>
      <div class="flex justify-center">
        <CTAButton
          size="lg"
          phoneNumber="12145244168"
          data-cta="final_cta_phone"
          aria-label="Call us now at (214) 524-4168"
        />
      </div>
      <div class="mt-6 text-sm text-grey-300">
        <p>Call (214) 524-4168 • Open Mon-Fri 8am-5pm, Sat 9am-3pm</p>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="max-w-[1200px] mx-auto px-5 py-12 md:py-16">
    <h2 class="text-3xl md:text-4xl font-bold mb-6 text-black text-center">Frequently Asked Questions</h2>
    <FAQ />
    <div class="mt-8 text-center">
      <a href="/faq" class="inline-flex items-center gap-2 text-brand-red font-semibold hover:text-brand-red-dark transition-colors duration-200">
        View All FAQs
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </section>

  <Footer />

  <!-- Exit Intent Conversion Popup -->
  <ExitIntentPopup />
</BaseLayout>
