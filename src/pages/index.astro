---
import BusinessHours from "../components/BusinessHours.astro";
import CTAButton from "../components/CTAButton.astro";
import ExitIntentPopup from "../components/ExitIntentPopup.astro";
import FAQ from "../components/FAQ.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import LocationTestimonials from "../components/LocationTestimonials.astro";
import EnhancedLocalBusinessSchema from "../components/seo/EnhancedLocalBusinessSchema.astro";
import SEOEnhancer from "../components/SEOEnhancer.astro";
import ServicesTeaser from "../components/ServicesTeaser.astro";
import StatsSection from "../components/StatsSection.astro";
import Testimonials from "../components/Testimonials.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="LC Container — Texas Shipping Containers | Buy, Lease, Custom"
  description="Buy, lease, or customize shipping containers in Texas. 10-acre yard in Hutchins. 10', 20', 40' containers. Fast delivery statewide. Established 2003."
>
  <SEOEnhancer pageType="home" focusKeyword="shipping containers Texas" />
  <EnhancedLocalBusinessSchema />
  <Header />
  <Hero />
  <ServicesTeaser />

  <!-- Mid-page CTA Banner -->
  <section class="max-w-[1200px] mx-auto px-6 md:px-8 py-16 md:py-20">
    <div class="border border-grey-300 bg-grey-100 p-10 md:p-14 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4 text-black">
        Ready to Get Started?
      </h2>
      <p class="text-lg text-grey-600 mb-8 max-w-2xl mx-auto">
        Join thousands of satisfied Texas businesses. Get your personalized
        quote in 24 hours with no obligation.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <CTAButton
          size="lg"
          phoneNumber="12145244168"
          data-cta="mid_page_phone"
          aria-label="Call us for immediate assistance"
        />
      </div>
      <div class="mt-6 flex flex-wrap justify-center gap-6 text-sm text-grey-600">
        <div>Free Consultation</div>
        <div>24h Response</div>
        <div>No Obligation</div>
      </div>
    </div>
  </section>

  <!-- Business Hours Display -->
  <section class="max-w-[1200px] mx-auto px-5 py-8">
    <BusinessHours />
  </section>

  <StatsSection />
  <LocationTestimonials />
  <Testimonials />
  
  <!-- Helpful Resources Section -->
  <section class="max-w-[1200px] mx-auto px-6 md:px-8 py-16 md:py-20">
    <h2 class="text-2xl md:text-3xl font-bold mb-10 text-black text-center leading-normal">Helpful Resources</h2>
    <div class="grid md:grid-cols-3 gap-8">
      <div class="border border-grey-300 bg-white p-8">
        <h3 class="text-lg font-semibold mb-2 text-black">How to Choose</h3>
        <p class="text-sm text-grey-600 mb-4">Complete guide to selecting the right container size and type for your needs.</p>
        <a href="/how-to-choose" class="text-brand-red hover:text-brand-red-dark font-semibold text-sm">Read Guide →</a>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-lg font-semibold mb-2 text-black">Buying Guide</h3>
        <p class="text-sm text-grey-600 mb-4">Everything you need to know before purchasing a shipping container.</p>
        <a href="/buying-guide" class="text-brand-red hover:text-brand-red-dark font-semibold text-sm">Read Guide →</a>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-lg font-semibold mb-2 text-black">Case Studies</h3>
        <p class="text-sm text-grey-600 mb-4">See real examples of how our customers use shipping containers.</p>
        <a href="/case-studies" class="text-brand-red hover:text-brand-red-dark font-semibold text-sm">View Examples →</a>
      </div>
    </div>
  </section>
  
  <!-- CTA After Testimonials -->
  <section class="max-w-[1200px] mx-auto px-6 md:px-8 py-16 md:py-20">
    <div class="border border-grey-300 bg-black text-white p-10 md:p-14 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">
        Ready to Get Your Container?
      </h2>
      <p class="text-lg text-grey-300 mb-8 max-w-2xl mx-auto">
        Call now for immediate pricing. Same-day delivery available. Thousands of containers in stock.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <CTAButton
          size="lg"
          phoneNumber="12145244168"
          data-cta="post_testimonials_phone"
          aria-label="Call us now at (214) 524-4168"
        />
        <a 
          href="/contact" 
          class="px-6 py-3 bg-white text-black font-semibold hover:bg-grey-100"
        >
          Get Free Quote
        </a>
      </div>
      <div class="mt-6 text-sm text-grey-300">
        <p>Call (214) 524-4168 • Open Mon-Fri 8am-5pm, Sat 9am-3pm</p>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="max-w-[1200px] mx-auto px-5 py-12">
    <h2 class="text-3xl md:text-4xl font-bold mb-6 text-black text-center">Frequently Asked Questions</h2>
    <FAQ />
    <div class="mt-8 text-center">
      <a href="/faq" class="text-brand-red font-semibold hover:text-brand-red-dark">
        View All FAQs →
      </a>
    </div>
  </section>

  <Footer />

  <!-- Exit Intent Conversion Popup -->
  <ExitIntentPopup />
</BaseLayout>
