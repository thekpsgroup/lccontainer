---
import CTAButton from "../components/CTAButton.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import SEOEnhancer from "../components/SEOEnhancer.astro";
import ServicesTeaser from "../components/ServicesTeaser.astro";
import StatsSection from "../components/StatsSection.astro";
import Testimonials from "../components/Testimonials.astro";
import StickyCallBar from "../components/StickyCallBar.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="LC Container â€” Texas Shipping Containers | Buy, Lease, Custom"
  description="Buy, lease, or customize shipping containers in Texas. 10-acre yard in Hutchins. 10', 20', 40' containers. Fast delivery statewide. Established 2003."
>
  <SEOEnhancer pageType="home" focusKeyword="shipping containers Texas" />
  <Header />
  <Hero />
  <div class="fade-in">
    <ServicesTeaser />
  </div>

  <!-- Mid-page CTA Banner - Phone Focused -->
  <section class="max-w-[1200px] mx-auto px-5 py-12">
    <div class="glass p-8 md:p-12 text-center relative overflow-hidden">
      <div
        class="absolute inset-0 bg-gradient-to-r from-brand-red/10 to-blue-600/10"
      >
      </div>
      <div class="relative">
        <!-- Urgency indicator -->
        <div class="inline-block bg-green-600 text-white px-4 py-2 rounded-full text-sm font-semibold mb-4 animate-pulse">
          ðŸ”¥ Call Now - Limited Inventory Available
        </div>
        
        <h2
          class="text-2xl md:text-4xl font-bold mb-4 text-brand-black dark:text-white"
        >
          Talk to a Container Expert Today
        </h2>
        <p class="text-xl text-ink mb-4 max-w-2xl mx-auto font-semibold">
          Get instant answers, real-time pricing, and same-day quotes
        </p>
        <p class="text-lg text-ink-muted mb-8 max-w-2xl mx-auto">
          Our container specialists are standing by to help you find the perfect solution.
          No waiting for email responses - speak with an expert in minutes.
        </p>
        
        <!-- Primary Phone CTA -->
        <div class="mb-6">
          <a
            href="tel:12145244168"
            class="inline-flex items-center justify-center gap-3 px-12 py-6 text-2xl font-bold bg-brand-red text-white rounded-2xl shadow-2xl hover:bg-brand-black transform hover:scale-105 transition-all duration-300 animate-pulse-subtle"
            data-cta="mid_page_phone_primary"
            aria-label="Call us now at (214) 524-4168 for immediate assistance"
          >
            <span class="text-3xl">ðŸ“ž</span>
            <span>(214) 524-4168</span>
          </a>
        </div>
        
        <p class="text-sm text-ink-muted mb-6">
          Or submit a quote request online (24h response time)
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <CTAButton
            variant="secondary"
            size="lg"
            href="/contact"
            data-cta="mid_page_quote"
            aria-label="Get started with your free quote"
          >
            Request Online Quote
          </CTAButton>
        </div>
        
        <div
          class="mt-8 flex flex-wrap justify-center gap-6 text-sm text-ink-muted"
        >
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"></path>
            </svg>
            Instant Answers
          </div>
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Real-Time Pricing
          </div>
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Expert Consultation
          </div>
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Same-Day Quotes
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- <FeaturedServices /> -->
  <StatsSection />
  <Testimonials />
  
  <!-- Sticky call bar for mobile conversions -->
  <StickyCallBar visible={true} />
  
  <Footer />
</BaseLayout>
