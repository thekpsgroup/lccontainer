---
import CTAButton from "../components/CTAButton.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import SEOEnhancer from "../components/SEOEnhancer.astro";
import ServicesTeaser from "../components/ServicesTeaser.astro";
import StatsSection from "../components/StatsSection.astro";
import Testimonials from "../components/Testimonials.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="LC Container â€” Texas Shipping Containers | Call (214) 524-4168 | Buy, Lease, Custom"
  description="Buy, lease, or customize shipping containers in Texas. Call (214) 524-4168 for instant quotes. 10-acre yard in Hutchins. 10', 20', 40' containers. Fast delivery statewide. Established 2003."
>
  <SEOEnhancer pageType="home" focusKeyword="shipping containers Texas" />
  <Header />
  <Hero />
  <div class="fade-in">
    <ServicesTeaser />
  </div>

  <!-- Mid-page CTA Banner -->
  <section class="max-w-[1200px] mx-auto px-5 py-12">
    <div class="glass p-8 md:p-12 text-center relative overflow-hidden">
      <div
        class="absolute inset-0 bg-gradient-to-r from-brand-red/10 to-blue-600/10"
      >
      </div>
      <div class="relative">
        <h2
          class="text-2xl md:text-3xl font-bold mb-2 text-brand-black dark:text-white"
        >
          Talk to an Expert Now
        </h2>
        <p class="text-xl font-semibold text-brand-red mb-4">
          ðŸ“ž (214) 524-4168
        </p>
        <p class="text-lg text-ink-muted mb-8 max-w-2xl mx-auto">
          Get instant answers and personalized quotes in 24 hours. Join thousands of satisfied Texas businesses with no obligation.
        </p>
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center items-center"
        >
          <CTAButton
            variant="primary"
            size="lg"
            href="tel:12145244168"
            data-cta="mid_page_phone"
            aria-label="Call us now for immediate assistance"
            icon="ðŸ“ž"
            class="animate-pulse-subtle"
          >
            Call Now: (214) 524-4168
          </CTAButton>

          <CTAButton
            variant="secondary"
            size="lg"
            href="/contact"
            data-cta="mid_page_quote"
            aria-label="Get started with your free quote"
          >
            Request Quote Online
          </CTAButton>
        </div>
        <div
          class="mt-6 flex flex-wrap justify-center gap-6 text-sm text-ink-muted"
        >
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 13l4 4L19 7"></path>
            </svg>
            Instant Phone Answers
          </div>
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Same-Day Quotes
          </div>
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-green-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Expert Consultation
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- <FeaturedServices /> -->
  <StatsSection />
  <Testimonials />
  <Footer />
</BaseLayout>
