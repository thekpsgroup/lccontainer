---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import FAQ from "../components/FAQ.astro";
---
<BaseLayout title="FAQ — LC Container" description="Answers to common container questions: sizes, delivery, site prep, new vs used, and more.">
  <Header />
  <section class="max-w-[1200px] mx-auto px-5 py-12 md:py-16">
    <h1 class="text-3xl md:text-4xl font-bold text-black mb-4">Frequently Asked Questions</h1>
    <p class="text-grey-600 mt-2 mb-8">Common questions about shipping containers, delivery, and our services.</p>
    <div class="mt-6">
      <FAQ />
    </div>
    <div class="mt-8 text-center">
      <p class="text-grey-600 mb-4">Still have questions?</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:12145244168" class="px-6 py-3 bg-brand-red text-white font-semibold hover:bg-brand-red-dark">
          Call (214) 524-4168
        </a>
        <a href="/contact" class="px-6 py-3 border border-grey-300 bg-white text-black font-semibold hover:bg-grey-100">
          Get Free Quote
        </a>
      </div>
    </div>
  </section>

  <!-- FAQPage schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      { "@type": "Question", "name": "Do you deliver statewide?", "acceptedAnswer": { "@type": "Answer", "text": "Yes, across Texas with tilt-bed and crane options." } },
      { "@type": "Question", "name": "Standard vs High Cube?", "acceptedAnswer": { "@type": "Answer", "text": "High Cube is 9'6\" tall — about 1' taller than Standard." } },
      { "@type": "Question", "name": "Used vs New (One-Trip)?", "acceptedAnswer": { "@type": "Answer", "text": "Used are WWT and cost-effective; New present cleaner and last longer." } }
    ]
  }
  </script>
</BaseLayout>
