---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import FAQ from "../components/FAQ.astro";
---
<BaseLayout title="FAQ — LC Container" description="Answers to common container questions: sizes, delivery, site prep, new vs used, and more.">
  <Header />
  <section class="max-w-[1200px] mx-auto px-5 py-12 md:py-16">
    <h1 class="text-3xl md:text-4xl font-bold text-black mb-4">Frequently Asked Questions</h1>
    <p class="text-grey-600 mt-2 mb-8">Common questions about shipping containers, delivery, and our services.</p>
    <div class="mt-6">
      <FAQ />
    </div>
    <div class="mt-8 text-center">
      <p class="text-grey-600 mb-4 text-lg">Still have questions?</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:12145244168" class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-brand-red text-white font-semibold hover:bg-brand-red-dark rounded-md shadow-md hover:shadow-lg transition-all duration-200 hover:scale-105">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call (214) 524-4168
        </a>
        <a href="/contact" class="inline-flex items-center justify-center gap-2 px-6 py-3 border border-grey-300 bg-white text-black font-semibold hover:bg-grey-50 hover:border-brand-red/40 rounded-md shadow-sm hover:shadow-md transition-all duration-200">
          Get Free Quote
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- FAQPage schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      { "@type": "Question", "name": "Do you deliver statewide?", "acceptedAnswer": { "@type": "Answer", "text": "Yes, across Texas with tilt-bed and crane options." } },
      { "@type": "Question", "name": "Standard vs High Cube?", "acceptedAnswer": { "@type": "Answer", "text": "High Cube is 9'6\" tall — about 1' taller than Standard." } },
      { "@type": "Question", "name": "Used vs New (One-Trip)?", "acceptedAnswer": { "@type": "Answer", "text": "Used are WWT and cost-effective; New present cleaner and last longer." } }
    ]
  }
  </script>
</BaseLayout>
