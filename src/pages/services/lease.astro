---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContainerGallery from '../../components/ContainerGallery.astro';
---

<BaseLayout
  title="Lease Shipping Containers in Texas | Flexible Container Leasing | LC Container"
  description="Lease shipping containers in Texas with flexible terms. Short and long-term leasing options for construction, storage, and temporary needs. Call (214) 524-4168 for leasing quotes."
>
  <Header />

  <!-- Hero Section -->
  <section class="bg-grey-100 py-16">
    <div class="max-w-[1200px] mx-auto px-5 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-black">Lease Containers in Texas</h1>
      <p class="text-lg text-grey-600 mb-8 max-w-3xl mx-auto">
        Flexible leasing for temporary or long-term container needs. Low upfront costs with easy upgrade and return options.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="tel:12145244168" class="px-8 py-4 bg-brand-red text-white font-bold hover:bg-brand-red-dark">Call (214) 524-4168</a>
        <a href="/contact?interest=Lease%20containers" class="px-8 py-4 border border-grey-300 bg-white text-black font-semibold hover:bg-grey-100">Get Free Quote</a>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="max-w-[1200px] mx-auto px-5 py-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Low Upfront Costs</h3>
        <p class="text-grey-600 text-sm">Minimal initial investment compared to buying. Perfect for businesses with budget constraints.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Flexible Terms</h3>
        <p class="text-grey-600 text-sm">Short-term or long-term leases available. Easy to extend or return when your needs change.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Easy Returns</h3>
        <p class="text-grey-600 text-sm">No hassle returns when your project is complete. We handle pickup and delivery.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Maintenance Included</h3>
        <p class="text-grey-600 text-sm">We handle maintenance and repairs. No unexpected costs or hassles for you.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Fast Setup</h3>
        <p class="text-grey-600 text-sm">Quick delivery and setup. Get your container operational within 24-48 hours.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Perfect for Projects</h3>
        <p class="text-grey-600 text-sm">Ideal for construction sites, temporary storage, and seasonal business needs.</p>
      </div>
    </div>
  </section>

  <!-- Container Gallery -->
  <ContainerGallery />

  <Footer />
</BaseLayout>

