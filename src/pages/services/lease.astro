---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContainerGallery from '../../components/ContainerGallery.astro';
import StickyCallBar from '../../components/StickyCallBar.astro';
---

<BaseLayout
  title="Lease Shipping Containers in Texas | Flexible Container Leasing | LC Container"
  description="Lease shipping containers in Texas with flexible terms. Short and long-term leasing options for construction, storage, and temporary needs. Call (214) 524-4168 for leasing quotes."
>
  <Header />

  <!-- Hero Section -->
  <section class="pt-32 pb-12 bg-primary-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-white mb-4">
        Lease Containers in Texas
      </h1>
      <p class="text-lg text-white mb-8">
        Flexible leasing solutions for temporary or long-term container needs. Low upfront costs with easy upgrade and return options.
      </p>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-12 bg-primary-50">
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Low Upfront Costs</h3>
          <p class="text-white text-sm">Minimal initial investment compared to buying. Perfect for businesses with budget constraints.</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Flexible Terms</h3>
          <p class="text-white text-sm">Short-term or long-term leases available. Easy to extend or return when your needs change.</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Easy Returns</h3>
          <p class="text-white text-sm">No hassle returns when your project is complete. We handle pickup and delivery.</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Maintenance Included</h3>
          <p class="text-white text-sm">We handle maintenance and repairs. No unexpected costs or hassles for you.</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Fast Setup</h3>
          <p class="text-white text-sm">Quick delivery and setup. Get your container operational within 24-48 hours.</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Perfect for Projects</h3>
          <p class="text-white text-sm">Ideal for construction sites, temporary storage, and seasonal business needs.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Container Gallery -->
  <ContainerGallery />

  <!-- Phone-Focused CTA Section -->
  <section class="py-12 bg-primary-50">
    <div class="max-w-4xl mx-auto px-4">
      <div class="glass p-8 md:p-12 text-center relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-brand-red/10 to-blue-600/10"></div>
        <div class="relative">
          <div class="inline-block bg-brand-red text-white px-4 py-2 rounded-full text-sm font-semibold mb-4">
            ðŸ“ž Leasing Specialists Available Now
          </div>
          <h2 class="text-3xl font-bold text-white mb-4">
            Discuss Your Leasing Needs
          </h2>
          <p class="text-lg text-white mb-8">
            Call our leasing team for personalized terms and instant quotes
          </p>
          <a
            href="tel:12145244168"
            class="inline-flex items-center justify-center gap-3 px-10 py-5 text-xl font-bold bg-brand-red text-white rounded-xl shadow-2xl hover:bg-white hover:text-brand-red transform hover:scale-105 transition-all duration-300"
            data-cta="lease_phone_cta"
            aria-label="Call for leasing information at (214) 524-4168"
          >
            <span class="text-2xl">ðŸ“ž</span>
            <span>(214) 524-4168</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <StickyCallBar visible={true} />
  <Footer />
</BaseLayout>

