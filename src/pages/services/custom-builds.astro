---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContainerGallery from '../../components/ContainerGallery.astro';
---

<BaseLayout
  title="Custom Container Builds - LC Container | Dallas-Fort Worth Custom Builder"
  description="Custom shipping container modifications and builds. Offices, retail spaces, living quarters, and specialty applications. Serving Dallas-Fort Worth and 200-mile radius. Call (214) 524-4168."
>
  <Header />

  <!-- Hero Section -->
  <section class="bg-grey-100 py-16">
    <div class="max-w-[1200px] mx-auto px-5 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-black">Custom Container Builds</h1>
      <p class="text-lg text-grey-600 mb-8 max-w-3xl mx-auto">
        We can build anything you imagine. From concept to completion, our custom container modifications convert standard shipping containers into specialized spaces.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="tel:12145244168" class="px-8 py-4 bg-brand-red text-white font-bold hover:bg-brand-red-dark">Call (214) 524-4168</a>
        <a href="/contact" class="px-8 py-4 border border-grey-300 bg-white text-black font-semibold hover:bg-grey-100">Get Free Quote</a>
      </div>
    </div>
  </section>

  <!-- Custom Build Categories -->
  <section class="max-w-[1200px] mx-auto px-5 py-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Custom Offices</h3>
        <p class="text-grey-600 text-sm">Professional office layouts with electrical, HVAC, and custom finishes.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Retail & Food Service</h3>
        <p class="text-grey-600 text-sm">Retail stores, restaurants, food trucks, and commercial spaces.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Living Spaces</h3>
        <p class="text-grey-600 text-sm">Tiny homes, guest houses, vacation rentals, and residential setups.</p>
      </div>
    </div>
  </section>

  <!-- Container Gallery -->
  <ContainerGallery />

  <Footer />
</BaseLayout>

