---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContainerGallery from '../../components/ContainerGallery.astro';
import StickyCallBar from '../../components/StickyCallBar.astro';
---

<BaseLayout
  title="Custom Container Builds - LC Container | Dallas-Fort Worth Custom Builder"
  description="Custom shipping container modifications and builds. Offices, retail spaces, living quarters, and specialty applications. Serving Dallas-Fort Worth and 200-mile radius. Call (214) 524-4168."
>
  <Header />

  <!-- Hero Section -->
  <section class="pt-32 pb-12 bg-brand-black">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-ink mb-4">Custom Container Builds</h1>
      <p class="text-lg text-ink-muted mb-8">
        We can build anything you imagine. From concept to completion, our custom container modifications transform standard shipping containers into specialized spaces.
      </p>
    </div>
  </section>

  <!-- Custom Build Categories -->
  <section class="py-12 bg-brand-black">
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="glass-card">
          <h3 class="text-xl font-bold text-ink mb-2">Custom Offices</h3>
          <p class="text-ink-muted text-sm">Professional office layouts with electrical, HVAC, and custom finishes.</p>
        </div>
        <div class="glass-card">
          <h3 class="text-xl font-bold text-ink mb-2">Retail & Food Service</h3>
          <p class="text-ink-muted text-sm">Retail stores, restaurants, food trucks, and commercial spaces.</p>
        </div>
        <div class="glass-card">
          <h3 class="text-xl font-bold text-ink mb-2">Living Spaces</h3>
          <p class="text-ink-muted text-sm">Tiny homes, guest houses, vacation rentals, and residential setups.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Container Gallery -->
  <ContainerGallery />

  <!-- Phone-Focused CTA for Custom Builds -->
  <section class="py-12 bg-brand-black">
    <div class="max-w-4xl mx-auto px-4">
      <div class="glass p-8 md:p-12 text-center relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-r from-brand-red/10 to-blue-600/10"></div>
        <div class="relative">
          <div class="inline-block bg-green-600 text-white px-4 py-2 rounded-full text-sm font-semibold mb-4">
            üõ†Ô∏è Custom Build Consultations Available
          </div>
          <h2 class="text-3xl font-bold text-ink mb-4">
            Let's Discuss Your Custom Project
          </h2>
          <p class="text-lg text-ink-muted mb-8">
            Speak with our custom build specialists to bring your vision to life
          </p>
          <a
            href="tel:12145244168"
            class="inline-flex items-center justify-center gap-3 px-10 py-5 text-xl font-bold bg-brand-red text-white rounded-xl shadow-2xl hover:bg-white hover:text-brand-red transform hover:scale-105 transition-all duration-300"
            data-cta="custom_builds_phone_cta"
            aria-label="Call for custom build consultation at (214) 524-4168"
          >
            <span class="text-2xl">üìû</span>
            <span>(214) 524-4168</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <StickyCallBar visible={true} />
  <Footer />
</BaseLayout>

