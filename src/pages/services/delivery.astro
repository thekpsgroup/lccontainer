---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContainerGallery from '../../components/ContainerGallery.astro';
---

<BaseLayout
  title="Container Delivery - Statewide Service | LC Container"
  description="Professional container delivery service across Texas. We deliver to construction sites, businesses, and residential locations with our specialized equipment and experienced team."
>
  <Header />

  <!-- Hero Section -->
  <section class="pt-32 pb-12 bg-primary-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-white mb-4">
        Container Delivery Service
      </h1>
      <p class="text-lg text-white mb-8">
        Professional delivery service across Texas. From our yard to your location with precision and care.
      </p>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-12 bg-primary-50">
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Statewide Service</h3>
          <p class="text-white text-sm">We deliver containers throughout Texas and surrounding areas.</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Specialized Equipment</h3>
          <p class="text-white text-sm">Container trucks, cranes, and specialized equipment for safe delivery.</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Experienced Team</h3>
          <p class="text-white text-sm">Professional drivers and operators with years of experience.</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Flexible Scheduling</h3>
          <p class="text-white text-sm">We work around your schedule for convenient delivery times.</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Site Assessment</h3>
          <p class="text-white text-sm">We evaluate your location for access, space, and placement requirements.</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">GPS Tracking</h3>
          <p class="text-white text-sm">Real-time tracking so you know exactly when your container will arrive.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Container Gallery -->
  <ContainerGallery />

  <Footer />
</BaseLayout>

