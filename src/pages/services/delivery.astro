---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContainerGallery from '../../components/ContainerGallery.astro';
---

<BaseLayout
  title="Container Delivery - Statewide Service | LC Container"
  description="Professional container delivery service across Texas. We deliver to construction sites, businesses, and residential locations with our specialized equipment and experienced team."
>
  <Header />

  <!-- Hero Section -->
  <section class="bg-grey-100 py-16">
    <div class="max-w-[1200px] mx-auto px-5 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-black">Container Delivery Service</h1>
      <p class="text-lg text-grey-600 mb-8 max-w-3xl mx-auto">
        Professional delivery service across Texas. From our yard to your location with precision and care.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="tel:12145244168" class="px-8 py-4 bg-brand-red text-white font-bold hover:bg-brand-red-dark">Call (214) 524-4168</a>
        <a href="/contact" class="px-8 py-4 border border-grey-300 bg-white text-black font-semibold hover:bg-grey-100">Get Delivery Quote</a>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="max-w-[1200px] mx-auto px-5 py-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Statewide Service</h3>
        <p class="text-grey-600 text-sm">We deliver containers throughout Texas and surrounding areas.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Specialized Equipment</h3>
        <p class="text-grey-600 text-sm">Container trucks, cranes, and specialized equipment for safe delivery.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Experienced Team</h3>
        <p class="text-grey-600 text-sm">Professional drivers and operators with years of experience.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Flexible Scheduling</h3>
        <p class="text-grey-600 text-sm">We work around your schedule for convenient delivery times.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Site Assessment</h3>
        <p class="text-grey-600 text-sm">We evaluate your location for access, space, and placement requirements.</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Reliable Service</h3>
        <p class="text-grey-600 text-sm">On-time delivery you can count on.</p>
      </div>
    </div>
  </section>

  <!-- Container Gallery -->
  <ContainerGallery />

  <Footer />
</BaseLayout>

