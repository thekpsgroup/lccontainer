---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContainerGallery from '../../components/ContainerGallery.astro';
---

<BaseLayout
  title="Container Leasing - Flexible Leasing | LC Container Texas"
  description="Flexible container leasing for businesses and individuals. Short-term and long-term leases available with delivery included. Serving Texas with competitive rates. Call (214) 524-4168."
>
  <Header />

  <!-- Hero Section -->
  <section class="bg-grey-100 py-16">
    <div class="max-w-[1200px] mx-auto px-5 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-black">Container Leasing</h1>
      <p class="text-lg text-grey-600 mb-8 max-w-3xl mx-auto">
        Flexible leasing options for businesses and individuals. No upfront costs, flexible terms, and delivery included.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="tel:12145244168" class="px-8 py-4 bg-brand-red text-white font-bold hover:bg-brand-red-dark">Call (214) 524-4168</a>
        <a href="/contact?interest=Lease%20containers" class="px-8 py-4 border border-grey-300 bg-white text-black font-semibold hover:bg-grey-100">Get Free Quote</a>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="max-w-[1200px] mx-auto px-5 py-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">No Upfront Costs</h3>
        <p class="text-grey-600 text-sm">Start using containers immediately without large capital investment</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Flexible Terms</h3>
        <p class="text-grey-600 text-sm">Short-term or long-term leases to match your project timeline</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Maintenance Included</h3>
        <p class="text-grey-600 text-sm">We handle all maintenance and repairs during your lease</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Easy Upgrades</h3>
        <p class="text-grey-600 text-sm">Upgrade to larger containers or different types as your needs change</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Delivery Included</h3>
        <p class="text-grey-600 text-sm">We deliver and pick up containers at your location</p>
      </div>
      <div class="border border-grey-300 bg-white p-6">
        <h3 class="text-xl font-bold text-black mb-2">Insurance Options</h3>
        <p class="text-grey-600 text-sm">Full insurance coverage available for your leased containers</p>
      </div>
    </div>
  </section>

  <!-- Container Gallery -->
  <ContainerGallery />

  <Footer />
</BaseLayout>

