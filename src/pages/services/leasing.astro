---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ContainerGallery from '../../components/ContainerGallery.astro';
---

<BaseLayout
  title="Container Leasing - Flexible Solutions | LC Container Texas"
  description="Flexible container leasing solutions for businesses and individuals. Short-term and long-term leases available with delivery included. Serving Texas with competitive rates. Call (214) 524-4168."
>
  <Header />

  <!-- Hero Section -->
  <section class="pt-32 pb-12 bg-primary-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-white mb-4">
        Container Leasing Solutions
      </h1>
      <p class="text-lg text-white mb-8">
        Flexible leasing options for businesses and individuals. No upfront costs, flexible terms, and delivery included.
      </p>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-12 bg-primary-50">
    <div class="max-w-5xl mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">No Upfront Costs</h3>
          <p class="text-white text-sm">Start using containers immediately without large capital investment</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Flexible Terms</h3>
          <p class="text-white text-sm">Short-term or long-term leases to match your project timeline</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Maintenance Included</h3>
          <p class="text-white text-sm">We handle all maintenance and repairs during your lease</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Easy Upgrades</h3>
          <p class="text-white text-sm">Upgrade to larger containers or different types as your needs change</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Delivery Included</h3>
          <p class="text-white text-sm">We deliver and pick up containers at your location</p>
        </div>
        <div class="bg-primary-100 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-2">Insurance Options</h3>
          <p class="text-white text-sm">Comprehensive insurance coverage available for your leased containers</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Container Gallery -->
  <ContainerGallery />

  <Footer />
</BaseLayout>

