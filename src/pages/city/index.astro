---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import { CITIES } from "../../data/cities";
---
<BaseLayout title="Texas Service Areas — LC Container" description="We deliver containers across Texas from our Hutchins yard. Dallas, Fort Worth, Austin, Houston, San Antonio, Waco, Tyler and more.">
  <Header />
  <section class="max-w-[1200px] mx-auto px-5 py-12 md:py-16">
    <h1 class="text-3xl md:text-4xl font-semibold">Texas Service Areas</h1>
    <p class="text-ink-muted mt-2">We deliver statewide. If you're outside these areas, reach out — we'll quote options.</p>

    <div class="mt-6 grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {CITIES.map(c => (
        <a href={`/city/${c.slug}`} class="glass p-4 rounded-xl hover:bg-white/5">
          <div class="text-lg font-semibold">{c.name}</div>
          <div class="text-xs text-ink-muted">{c.metro}</div>
        </a>
      ))}
    </div>

    <div class="mt-6">
      <a href="/contact" class="px-4 py-2 rounded-xl bg-brand-red text-white text-sm font-semibold hover:opacity-90">Get Free Quote</a>
    </div>
  </section>
</BaseLayout>
