---
const featuredServices = [
  {
    title: "Container Sales",
    description: "New and used containers for every need",
    image: "/photos/container/standard/yard-overview.jpg",
    features: ["20' Standard", "40' Standard", "40' High Cube", "One-Trip New"],
    price: "From $1,800",
    cta: "View Inventory",
    href: "/inventory"
  },
  {
    title: "Custom Modifications",
    description: "Turn your container into anything you need",
    image: "/photos/container/custom/office-interior.jpg",
    features: ["Office Conversions", "Retail Spaces", "Event Venues", "Storage Solutions"],
    price: "Custom Quote",
    cta: "Start Custom Build",
    href: "/services#custom"
  },
  {
    title: "Leasing Options",
    description: "Flexible leasing for temporary needs",
    image: "/photos/container/lease/stacked-containers.jpg",
    features: ["Short Term", "Long Term", "Delivery Included", "Pickup Service"],
    price: "From $150/month",
    cta: "See Lease Plans",
    href: "/services#lease"
  }
];
---

<section class="max-w-[1200px] mx-auto px-5 py-16">
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold mb-4">Featured Services</h2>
    <p class="text-lg text-ink-muted max-w-2xl mx-auto">
      Discover our most popular container solutions, designed to meet your specific needs with quality and reliability.
    </p>
  </div>

  <div class="grid lg:grid-cols-3 gap-8">
    {featuredServices.map(service => (
      <div class="glass overflow-hidden hover-lift group transition-all duration-300">
        <div class="relative h-48 overflow-hidden">
          <img 
            src={service.image} 
            alt={service.title}
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
          <div class="absolute bottom-4 left-4 right-4">
            <h3 class="text-xl font-bold text-white mb-1">{service.title}</h3>
            <p class="text-sm text-white/90">{service.description}</p>
          </div>
        </div>
        
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <span class="text-2xl font-bold text-brand-red">{service.price}</span>
            <div class="text-sm text-ink-muted">Starting price</div>
          </div>
          
          <div class="mb-4">
            <div class="flex flex-wrap gap-2">
              {service.features.map(feature => (
                <span class="text-xs px-2 py-1 rounded-full bg-brand-red/10 text-brand-red border border-brand-red/20">
                  {feature}
                </span>
              ))}
            </div>
          </div>
          
          <a 
            href={service.href} 
            data-astro-prefetch
            class="inline-flex items-center justify-center w-full px-4 py-3 rounded-xl bg-brand-red text-white font-semibold hover:opacity-90 transition-all duration-200 group-hover:scale-105"
          >
            {service.cta}
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    ))}
  </div>
</section>
