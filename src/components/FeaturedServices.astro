---
import SmartImage from './SmartImage.astro';
import CTAButton from './CTAButton.astro';
---

const featuredServices = [
  {
    title: "Container Sales",
    description: "New and used containers for every need",
    image: "/photos/container/standard/yard-overview.jpg",
    features: ["20' Standard", "40' Standard", "40' High Cube", "One-Trip New"],
    price: "From $1,800",
    cta: "View Inventory",
    href: "/inventory"
  },
  {
    title: "Custom Modifications",
    description: "Turn your container into anything you need",
    image: "/photos/container/custom/custom-modification-8.jpg",
    features: ["Office Conversions", "Retail Spaces", "Event Venues", "Storage Solutions"],
    price: "Custom Quote",
    cta: "Start Custom Build",
    href: "/services#custom"
  },
  {
    title: "Leasing Options",
    description: "Flexible leasing for temporary needs",
    image: "/photos/container/standard/container-yard-overview.jpg",
    features: ["Short Term", "Long Term", "Delivery Included", "Pickup Service"],
    price: "From $150/month",
    cta: "See Lease Plans",
    href: "/services#lease"
  }
];

---

<section class="max-w-[1200px] mx-auto px-16 md:px-24 lg:px-32 py-64 md:py-80">
  <div class="text-center mb-24">
    <h2 class="heading-2 mb-8">Featured Services</h2>
    <p class="body-large text-secondary max-w-2xl mx-auto">
      Discover our most popular container solutions, designed to meet your specific needs with quality and reliability.
    </p>
  </div>

  <div class="grid lg:grid-cols-3 gap-16">
    {featuredServices.map(service => (
      <div class="glass overflow-hidden hover-lift group transition-all duration-300">
        <div class="relative h-48 overflow-hidden">
          <img
            src={service.image}
            alt={service.title}
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
          <div class="absolute bottom-4 left-4 right-4">
            <h3 class="text-on-image card-title">{service.title}</h3>
            <p class="text-on-image card-description">{service.description}</p>
          </div>
        </div>

        <div class="p-8">
          <div class="flex items-center justify-between mb-4">
            <span class="card-price">{service.price}</span>
            <div class="caption text-muted">Starting price</div>
          </div>

          <div class="mb-4">
            <div class="flex flex-wrap gap-2">
              {service.features.map(feature => (
                <span class="text-xs px-2 py-1 rounded-full bg-brand-red/10 text-brand-red border border-brand-red/20">
                  {feature}
                </span>
              ))}
            </div>
          </div>

          <CTAButton
            variant="primary"
            size="md"
            href={service.href}
            data-cta={`featured_${service.title.toLowerCase().replace(/\s+/g, '_')}`}
            fullWidth={true}
            class="group-hover:scale-105"
          >
            {service.cta}
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </CTAButton>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .glass {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
  }

  .hover-lift:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>