---
export interface Props {
  class?: string;
  showLocation?: boolean;
}

const { class: className = "", showLocation = true } = Astro.props;

const businessHours = [
  { days: "Monday - Friday", hours: "8:00 AM - 5:00 PM", open: true },
  { days: "Saturday", hours: "9:00 AM - 3:00 PM", open: true },
  { days: "Sunday", hours: "Closed", open: false },
];

// Check if currently open (basic implementation)
const now = new Date();
const currentDay = now.getDay(); // 0 = Sunday, 1 = Monday, etc.
const currentHour = now.getHours();

let isCurrentlyOpen = false;
if (currentDay >= 1 && currentDay <= 5) {
  // Monday-Friday
  isCurrentlyOpen = currentHour >= 8 && currentHour < 17;
} else if (currentDay === 6) {
  // Saturday
  isCurrentlyOpen = currentHour >= 9 && currentHour < 15;
}
---

<div class={`business-hours ${className}`}>
  <div class="hours-header">
    <h3 class="text-lg font-semibold text-ink-primary mb-2">
      üìç Hours & Location
    </h3>
    <div class="status-indicator mb-4">
      <span
        class={`inline-flex items-center gap-2 px-3 py-1 rounded-full text-sm font-medium ${
          isCurrentlyOpen
            ? "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300"
            : "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300"
        }`}
      >
        <div
          class={`w-2 h-2 rounded-full ${isCurrentlyOpen ? "bg-green-500" : "bg-red-500"} animate-pulse`}
        >
        </div>
        {isCurrentlyOpen ? "Open Now" : "Closed"}
      </span>
    </div>
  </div>

  <div class="hours-grid space-y-3">
    {
      businessHours.map(({ days, hours, open }) => (
        <div class="flex items-center justify-between py-2 border-b border-brand-line/20 last:border-b-0">
          <span class="text-sm font-medium text-ink-secondary">{days}</span>
          <span
            class={`text-sm ${open ? "text-ink-primary" : "text-ink-muted"}`}
          >
            {hours}
          </span>
        </div>
      ))
    }
  </div>

  {
    showLocation && (
      <div class="location-info mt-6 pt-4 border-t border-brand-line/20">
        <div class="space-y-3">
          <div class="flex items-start gap-3">
            <svg
              class="w-5 h-5 text-brand-red mt-0.5 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              />
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
              />
            </svg>
            <div>
              <p class="text-sm font-medium text-ink-primary">Hutchins, TX</p>
              <p class="text-xs text-ink-muted">Serving DFW Metroplex</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <svg
              class="w-5 h-5 text-brand-red mt-0.5 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
            <div>
              <p class="text-sm font-medium text-ink-primary">
                200-Mile Service Radius
              </p>
              <p class="text-xs text-ink-muted">Same-day delivery available</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <svg
              class="w-5 h-5 text-brand-red mt-0.5 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              />
            </svg>
            <div>
              <p class="text-sm font-medium text-ink-primary">(214) 524-4168</p>
              <p class="text-xs text-ink-muted">Call for instant pricing</p>
            </div>
          </div>
        </div>

        <div class="mt-4 pt-4 border-t border-brand-line/20">
          <a
            href="tel:12145244168"
            class="w-full bg-brand-red hover:bg-red-700 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center gap-2 text-sm"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              />
            </svg>
            Call Now - {isCurrentlyOpen ? "We're Open!" : "Leave Message"}
          </a>
        </div>
      </div>
    )
  }

  <!-- Structured Data for Business Hours -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "OpeningHoursSpecification",
      "opens": "08:00",
      "closes": "17:00",
      "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      "validFrom": "2025-01-01",
      "validThrough": "2025-12-31"
    }
  </script>
</div>

<style>
  .business-hours {
    @apply bg-white dark:bg-brand-black/20 backdrop-blur-sm rounded-xl border border-brand-line/20 p-6 shadow-sm;
  }

  .hours-grid {
    @apply divide-y divide-brand-line/10;
  }

  @media (max-width: 640px) {
    .business-hours {
      @apply p-4;
    }
  }
</style>
