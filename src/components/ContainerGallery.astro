---
// Enhanced Container Gallery component with better spacing and CTAs
import ContainerCard from './ContainerCard.astro';
import ImageGallery from './ImageGallery.astro';
import { containerImages } from '../data/images';
---

<section class="py-24 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800">
  <div class="content-wrap">
    <!-- Enhanced Header -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center px-6 py-3 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 text-sm font-medium mb-8 border border-blue-200 dark:border-blue-700/50">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>
        Quality Containers
      </div>
      
      <h2 class="text-4xl md:text-6xl font-bold text-slate-900 dark:text-white mb-8 leading-tight">
        Our Container Solutions
      </h2>
      <p class="text-xl md:text-2xl text-slate-700 dark:text-slate-200 max-w-4xl mx-auto leading-relaxed">
        From basic storage to custom builds, we offer a complete range of container solutions 
        to meet your specific needs and budget.
      </p>
    </div>

    <!-- Enhanced Container Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12 mb-20">
      <ContainerCard
        title="20ft Standard Container"
        image="/photos/container/standard/20ft_1.jpg"
        dimensions="20' x 8' x 8'6&quot;"
        description="Perfect for basic storage needs. Wind and water tight, ready for immediate use."
        bullets={[
          "160 sq ft of storage space",
          "Wind and water tight",
          "ISO certified",
          "Perfect for storage or transport"
        ]}
        ctaHref="/contact"
        class="scale-in"
        style="animation-delay: 0.1s"
      />
      
      <ContainerCard
        title="40ft High Cube Container"
        image="/photos/container/standard/40ft_1.jpg"
        dimensions="40' x 8' x 9'6&quot;"
        description="Maximum storage capacity with extra height. Ideal for larger items and equipment."
        bullets={[
          "320 sq ft of storage space",
          "Extra height for tall items",
          "Great for equipment storage",
          "Popular for custom builds"
        ]}
        ctaHref="/contact"
        class="scale-in"
        style="animation-delay: 0.2s"
      />
      
      <ContainerCard
        title="Custom Office Container"
        image="/photos/container/custom/custom-modification-2.jpg"
        description="Turnkey office solution with electrical, HVAC, and interior finishing included."
        bullets={[
          "Complete office setup",
          "Electrical and HVAC included",
          "Professional interior finishing",
          "Ready for immediate use"
        ]}
        ctaHref="/services/custom-builds"
        class="scale-in"
        style="animation-delay: 0.3s"
      />
      
      <ContainerCard
        title="Refrigerated Container"
        image="/photos/container/custom/custom-modification-5.jpg"
        description="Temperature-controlled storage for perishable goods and sensitive materials."
        bullets={[
          "Temperature controlled",
          "Perfect for food storage",
          "Pharmaceutical grade available",
          "24/7 monitoring systems"
        ]}
        ctaHref="/contact"
        class="scale-in"
        style="animation-delay: 0.4s"
      />
      
      <ContainerCard
        title="Open Top Container"
        image="/photos/container/standard/20ft_2.jpg"
        description="Easy loading from the top. Perfect for tall equipment and machinery."
        bullets={[
          "Easy top loading",
          "Great for tall equipment",
          "Removable roof panels",
          "Versatile loading options"
        ]}
        ctaHref="/contact"
        class="scale-in"
        style="animation-delay: 0.5s"
      />
      
      <ContainerCard
        title="Flat Rack Container"
        image="/photos/container/standard/40ft_2.jpg"
        description="Open sides for oversized cargo. Ideal for construction materials and machinery."
        bullets={[
          "Open side design",
          "Perfect for oversized cargo",
          "Construction materials",
          "Heavy machinery transport"
        ]}
        ctaHref="/contact"
        class="scale-in"
        style="animation-delay: 0.6s"
      />
    </div>

    <!-- Enhanced Photo Gallery Section -->
    <div class="mb-20">
      <div class="text-center mb-16">
        <h3 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-6">
          See Our Work in Action
        </h3>
        <p class="text-xl text-slate-700 dark:text-slate-200 max-w-3xl mx-auto">
          Browse through our portfolio of custom builds and container modifications. 
          Each project showcases our attention to detail and quality craftsmanship.
        </p>
      </div>
      
      <ImageGallery 
        images={[
          {
            src: "/photos/container/custom/custom-modification-2.jpg",
            alt: "Custom container office with professional interior finishing",
            title: "Custom Office Build",
            category: "Custom Build",
            description: "Complete office setup with electrical and HVAC"
          },
          {
            src: "/photos/container/custom/custom-modification-3.jpg",
            alt: "Container with electrical and plumbing installation",
            title: "Electrical & Plumbing",
            category: "Custom Modification",
            description: "Professional electrical and plumbing systems"
          },
          {
            src: "/photos/container/custom/custom-modification-4.jpg",
            alt: "Custom container with windows and doors",
            title: "Windows & Doors",
            category: "Custom Modification",
            description: "Custom window and door installations"
          },
          {
            src: "/photos/container/custom/custom-modification-5.jpg",
            alt: "Container with HVAC system installation",
            title: "HVAC Systems",
            category: "Custom Modification",
            description: "Climate control and ventilation systems"
          },
          {
            src: "/photos/container/custom/custom-modification-6.jpg",
            alt: "Container with insulation and wall finishing",
            title: "Insulation & Walls",
            category: "Custom Modification",
            description: "Professional insulation and wall systems"
          },
          {
            src: "/photos/container/custom/custom-modification-7.jpg",
            alt: "Container with flooring installation",
            title: "Flooring Systems",
            category: "Custom Modification",
            description: "Durable flooring solutions for any use"
          }
        ]}
        columns={3}
        showTitles={true}
        showOverlay={true}
        aspectRatio="landscape"
        class="mb-12"
      />
      
      <!-- Additional Gallery Section -->
      <div class="text-center mb-16">
        <h4 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-white mb-6">
          Our Facility & Inventory
        </h4>
        <p class="text-lg text-slate-700 dark:text-slate-200 max-w-2xl mx-auto">
          Take a tour of our facility and see our extensive inventory of quality containers.
        </p>
      </div>
      
      <ImageGallery 
        images={[
          {
            src: "/photos/container/standard/yard-overview.jpg",
            alt: "Container yard overview showing extensive inventory",
            title: "Yard Overview",
            category: "Facility",
            description: "Our extensive container yard with full inventory"
          },
          {
            src: "/photos/container/standard/yard-storage.jpg",
            alt: "Organized container storage area",
            title: "Storage Area",
            category: "Facility",
            description: "Organized storage area for easy access"
          },
          {
            src: "/photos/container/standard/yard-inventory.jpg",
            alt: "Container inventory management system",
            title: "Inventory Management",
            category: "Facility",
            description: "Comprehensive inventory management system"
          }
        ]}
        columns={3}
        showTitles={true}
        showOverlay={true}
        aspectRatio="landscape"
      />
    </div>

    <!-- Enhanced CTA Section -->
    <div class="text-center">
      <div class="bg-white dark:bg-slate-800 rounded-3xl p-12 shadow-2xl border border-slate-200 dark:border-slate-700">
        <h3 class="text-3xl md:text-4xl font-bold text-slate-900 dark:text-white mb-6">
          Need Something Custom?
        </h3>
        <p class="text-xl text-slate-700 dark:text-slate-200 mb-10 max-w-3xl mx-auto">
          Don't see exactly what you need? Our custom build team can create the perfect solution 
          for your specific requirements. From offices to workshops, we've built it all.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a 
            href="/services/custom-builds" 
            class="group relative inline-flex items-center justify-center px-10 py-5 bg-blue-600 text-white text-lg font-semibold rounded-2xl hover:bg-blue-700 shadow-2xl hover:shadow-blue-500/25 transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-blue-500/50"
          >
            <span class="relative z-10">Start Custom Project</span>
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-700 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <svg class="w-5 h-5 ml-3 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          
          <a 
            href="tel:(214) 524-4168" 
            class="group relative inline-flex items-center justify-center px-10 py-5 bg-slate-100 dark:bg-slate-700 text-slate-900 dark:text-white text-lg font-semibold rounded-2xl hover:bg-slate-200 dark:hover:bg-slate-600 shadow-2xl hover:shadow-slate-500/25 transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-slate-500/50"
          >
            <span class="relative z-10">Call for Quote</span>
            <svg class="w-5 h-5 ml-3 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Additional Info Section -->
    <div class="mt-20 text-center">
      <div class="inline-flex items-center justify-center space-x-12 text-sm text-slate-600 dark:text-slate-300">
        <div class="flex items-center">
          <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Quality Guaranteed
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Fast Delivery
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          Statewide Service
        </div>
      </div>
    </div>
  </div>
</section>

