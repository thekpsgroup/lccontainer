<div id="cookie-banner" class="fixed inset-x-0 bottom-4 z-[60] px-4 hidden">
  <div class="max-w-7xl mx-auto">
    <div class="bg-primary-50/95 text-white rounded-xl shadow-2xl backdrop-blur px-5 py-4 flex flex-col sm:flex-row items-start sm:items-center gap-4">
      <div class="text-sm leading-relaxed">
        We use cookies to enhance your experience, analyze site usage, and deliver relevant marketing. See our 
        <a href="/cookies" class="underline decoration-secondary-500 hover:text-secondary-400">Cookie Policy</a>.
      </div>
      <div class="flex items-center gap-3 ml-auto">
        <button id="cookie-decline" class="text-sm px-4 py-2 rounded-lg border border-white/30 hover:bg-white/10 transition-colors">Decline</button>
        <button id="cookie-accept" class="text-sm px-4 py-2 rounded-lg bg-secondary-500 hover:bg-secondary-400 transition-colors">Accept</button>
      </div>
    </div>
  </div>
</div>

<script>
  const banner = document.getElementById('cookie-banner');
  const key = 'lc_cookie_consent_v1';
  const existing = typeof window !== 'undefined' ? localStorage.getItem(key) : 'accepted';
  if (!existing && banner) {
    banner.classList.remove('hidden');
  }
  const acceptBtn = document.getElementById('cookie-accept');
  const declineBtn = document.getElementById('cookie-decline');
  function hide() { banner?.classList.add('hidden'); }
  acceptBtn?.addEventListener('click', () => { localStorage.setItem(key, 'accepted'); hide(); });
  declineBtn?.addEventListener('click', () => { localStorage.setItem(key, 'declined'); hide(); });
</script>
