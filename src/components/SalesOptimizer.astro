    </div>
  </div>
</div>

<style>
  @keyframes scroll {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
  }
  
  .animate-scroll {
    animation: scroll 30s linear infinite;
  }
  
  .animate-scroll:hover {
    animation-play-state: paused;
  }
</style>

<script>
  // Sales optimization functionality
  document.addEventListener('DOMContentLoaded', function() {
    let scrollDepth = 0;
    
    // Track scroll depth
    window.addEventListener('scroll', function() {
      const scrollPercent = (window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100;
      scrollDepth = Math.max(scrollDepth, scrollPercent);
    });
    
    // Progressive disclosure for pricing
    const pricingElements = document.querySelectorAll('.pricing-info');
    pricingElements.forEach((element, index) => {
      setTimeout(() => {
        element.classList.add('opacity-100');
        element.classList.remove('opacity-0');
      }, index * 200);
    });
  });
  
  // Track micro-conversions
  function trackMicroConversion(type, value) {
    if (typeof gtag !== 'undefined') {
      gtag('event', 'micro_conversion', {
        'event_category': 'Engagement',
        'event_label': type,
        'value': value
      });
    }
    
    if (typeof va !== 'undefined') {
      va('event', 'micro_conversion', {
        type: type,
        value: value,
        page: window.location.pathname
      });
    }
  }
  
  // Expose tracking function globally
  window.trackMicroConversion = trackMicroConversion;
</script>

