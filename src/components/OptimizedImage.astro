---
export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  sizes?: string;
  quality?: number;
  format?: 'webp' | 'avif' | 'auto';
  placeholder?: 'blur' | 'dominantColor' | 'none';
}

const { 
  src, 
  alt, 
  width = 800, 
  height = 600, 
  class: className = '',
  loading = 'lazy',
  sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw',
  quality = 85,
  format = 'auto',
  placeholder = 'blur'
} = Astro.props;

// Generate responsive srcset for different screen sizes
const generateSrcSet = (imagePath: string) => {
  const sizes = [400, 600, 800, 1200, 1600, 2000];
  return sizes
    .map(size => `${imagePath}?w=${size}&q=${quality}&f=${format} ${size}w`)
    .join(', ');
};

// Generate placeholder URL for blur effect
const generatePlaceholder = (imagePath: string) => {
  if (placeholder === 'blur') {
    return `${imagePath}?w=20&q=30&f=webp`;
  }
  return '';
};
---

<img 
  src={src}
  alt={alt}
  width={width}
  height={height}
  loading={loading}
  sizes={sizes}
  srcset={generateSrcSet(src)}
  class={`w-full h-auto object-cover ${className}`}
  decoding="async"
  fetchpriority={loading === 'eager' ? 'high' : 'auto'}
  style={placeholder === 'blur' ? `background-image: url('${generatePlaceholder(src)}'); background-size: cover; background-position: center;` : ''}
/>

<style>
  img {
    max-width: 100%;
    height: auto;
    display: block;
    transition: opacity 0.3s ease-in-out;
  }
  
  img[loading="lazy"] {
    opacity: 0;
    animation: fadeIn 0.3s ease-in-out forwards;
  }
  
  img[loading="lazy"]:not([src]) {
    opacity: 0;
  }
  
  img[loading="lazy"][src] {
    opacity: 1;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  /* Smooth loading placeholder */
  img:not([src]) {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: loading 1.5s infinite;
  }
  
  @keyframes loading {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }
</style>
