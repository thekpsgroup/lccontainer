---
const cards = [
  {
    title: "Buy Containers",
    copy: "Own outright. New, used, and high-cube containers. Wind & water tight or one-trip new. <strong class='text-brand-red'>1,000's in stock</strong>. Transparent pricing.",
    cta: "Browse Inventory",
    href: "/inventory",
    icon: `<svg class="w-8 h-8 text-brand-red" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>`,
    features: ["New & Used", "High Cube", "Wind & Water Tight", "Transparent Pricing"]
  },
  {
    title: "Lease Containers",
    copy: "Flexible short and long-term leases. Pickup at end of term. Delivery included. Perfect for temporary storage needs.",
    cta: "See Lease Plans",
    href: "/services#lease",
    icon: `<svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>`,
    features: ["Short Term", "Long Term", "Delivery Included", "Flexible Terms"]
  },
  {
    title: "Custom Builds",
    copy: "Turnkey modifications: paint, insulation, roll-up doors, HVAC, power, branding. Your vision, our expertise.",
    cta: "Start a Custom Build",
    href: "/services#custom",
    icon: `<svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path></svg>`,
    features: ["Paint & Branding", "Insulation", "HVAC Systems", "Power & Lighting"]
  },
  {
    title: "Fast Delivery",
    copy: "Statewide delivery within 24-48 hours. Professional delivery team. Site preparation assistance available.",
    cta: "Get Delivery Quote",
    href: "/services/delivery",
    icon: `<svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>`,
    features: ["24-48 Hour Delivery", "Statewide Service", "Professional Team", "Site Prep Help"]
  },
  {
    title: "Container Sales",
    copy: "Specialized containers for every need: office, storage, retail, events, and more. Custom solutions for unique applications.",
    cta: "View Specialized Options",
    href: "/inventory",
    icon: `<svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>`,
    features: ["Office Containers", "Storage Solutions", "Retail Spaces", "Event Venues"]
  },
  {
    title: "Expert Support",
    copy: "20+ years of experience. Licensed and insured. BBB accredited. Your trusted partner for all container needs.",
    cta: "Contact Our Team",
    href: "/contact",
    icon: `<svg class="w-8 h-8 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>`,
    features: ["20+ Years Experience", "Licensed & Insured", "BBB Accredited", "Expert Guidance"]
  }
];
---
<section class="max-w-[1200px] mx-auto px-5 py-16">
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold mb-4">What do you need today?</h2>
    <p class="text-lg text-ink-muted max-w-2xl mx-auto">
      From simple storage to complex custom builds, we have the expertise and inventory to meet your container needs.
    </p>
  </div>
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    {cards.map(c => (
      <div class="glass p-6 hover-lift group transition-all duration-300 border border-brand-line/20 hover:border-brand-red/30">
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0" set:html={c.icon}></div>
          <div class="flex-1">
            <h3 class="text-xl font-bold mb-3 group-hover:text-brand-red transition-colors">{c.title}</h3>
            <p class="text-sm text-ink-muted mb-4 leading-relaxed" set:html={c.copy}></p>
            
            <div class="mb-4">
              <div class="flex flex-wrap gap-2">
                {c.features.map(feature => (
                  <span class="text-xs px-2 py-1 rounded-full bg-brand-red/10 text-brand-red border border-brand-red/20">
                    {feature}
                  </span>
                ))}
              </div>
            </div>
            
            <a 
              href={c.href} 
              data-astro-prefetch 
              class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-brand-red text-white text-sm font-semibold hover:opacity-90 transition-all duration-200 group-hover:scale-105"
            >
              {c.cta}
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>
  
  <!-- Trust Indicators -->
  <div class="mt-16 text-center">
    <div class="grid md:grid-cols-4 gap-6">
      <div class="glass p-4">
        <div class="flex justify-center mb-3">
          <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h4 class="font-semibold">20+ Years Experience</h4>
        <p class="text-sm text-ink-muted">Established 2003</p>
      </div>
      <div class="glass p-4">
        <div class="flex justify-center mb-3">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
        <h4 class="font-semibold">1,000+ Containers</h4>
        <p class="text-sm text-ink-muted">In Stock</p>
      </div>
      <div class="glass p-4">
        <div class="flex justify-center mb-3">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h4 class="font-semibold">Statewide Delivery</h4>
        <p class="text-sm text-ink-muted">24-48 Hours</p>
      </div>
      <div class="glass p-4">
        <div class="flex justify-center mb-3">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h4 class="font-semibold">Licensed & Insured</h4>
        <p class="text-sm text-ink-muted">BBB Accredited</p>
      </div>
    </div>
  </div>
</section>
