---
const services = [
  {
    title: "Buy Containers",
    copy: "Own outright. New, used, and high-cube containers. Wind & water tight or one-trip new. 1,000's in stock. Call for pricing.",
    cta: "Browse Inventory",
    href: "/inventory",
    features: ["New & Used", "High Cube", "Wind & Water Tight", "Transparent Pricing"]
  },
  {
    title: "Lease Containers",
    copy: "Flexible short and long-term leases. Pickup at end of term. Delivery included. Perfect for temporary storage needs.",
    cta: "See Lease Plans",
    href: "/services#lease",
    features: ["Short Term", "Long Term", "Delivery Included", "Flexible Terms"]
  },
  {
    title: "Custom Builds",
    copy: "Turnkey modifications: paint, insulation, roll-up doors, HVAC, power, branding. Your vision, our expertise.",
    cta: "Start a Custom Build",
    href: "/services#custom",
    features: ["Paint & Branding", "Insulation", "HVAC Systems", "Power & Lighting"]
  },
  {
    title: "Fast Delivery",
    copy: "Statewide delivery within 24-48 hours. Professional delivery team. Site preparation assistance available.",
    cta: "Get Delivery Quote",
    href: "/services/delivery",
    features: ["24-48 Hour Delivery", "Statewide Service", "Professional Team", "Site Prep Help"]
  },
  {
    title: "Container Sales",
    copy: "Specialized containers for every need: office, storage, retail, events, and more. Custom modifications for unique applications.",
    cta: "View Specialized Options",
    href: "/inventory",
    features: ["Office Containers", "Storage", "Retail Spaces", "Event Venues"]
  },
  {
    title: "Expert Support",
    copy: "20+ years of experience. Licensed and insured. BBB accredited. Your trusted partner for all container needs.",
    cta: "Contact Our Team",
    href: "/contact",
    features: ["20+ Years Experience", "Licensed & Insured", "BBB Accredited", "Expert Guidance"]
  }
];
---
<section class="max-w-[1200px] mx-auto px-6 md:px-8 py-16 md:py-20">
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-bold mb-6 text-black leading-normal">Our Services</h2>
    <p class="text-lg md:text-xl text-grey-600 max-w-2xl mx-auto leading-relaxed">
      From simple storage to complex custom builds, we have the expertise and inventory to meet your container needs. <a href="/inventory" class="text-brand-red hover:text-brand-red-dark font-semibold">Browse our inventory</a> or <a href="tel:12145244168" class="text-brand-red hover:text-brand-red-dark font-semibold">call now for pricing</a>.
    </p>
  </div>
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {services.map(service => (
      <div class="border border-grey-300 bg-white p-8 rounded hover:border-brand-red/30 hover:shadow-md hover:-translate-y-1 transition-all duration-200">
        <h3 class="text-xl font-bold mb-3 text-black">{service.title}</h3>
        <p class="text-sm text-grey-600 mb-4 leading-relaxed">{service.copy}</p>
        
        <div class="mb-6">
          <div class="flex flex-wrap gap-2">
            {service.features.map(feature => (
              <span class="text-xs px-2 py-1 bg-grey-100 text-grey-700 border border-grey-300 rounded">
                {feature}
              </span>
            ))}
          </div>
        </div>
        
        <a 
          href={service.href} 
          data-astro-prefetch 
          class="inline-block px-5 py-2.5 bg-brand-red text-white text-sm font-semibold hover:bg-brand-red-dark rounded transition-colors duration-200"
        >
          {service.cta}
        </a>
      </div>
    ))}
  </div>
  
  <!-- Trust Indicators -->
  <div class="mt-16">
    <div class="grid md:grid-cols-4 gap-6">
      <div class="border border-grey-300 bg-white p-5 text-center rounded hover:border-brand-red/20 transition-colors duration-200">
        <h4 class="font-semibold text-black mb-2">20+ Years Experience</h4>
        <p class="text-sm text-grey-600">Established 2003</p>
      </div>
      <div class="border border-grey-300 bg-white p-5 text-center rounded hover:border-brand-red/20 transition-colors duration-200">
        <h4 class="font-semibold text-black mb-2">1,000+ Containers</h4>
        <p class="text-sm text-grey-600">In Stock</p>
      </div>
      <div class="border border-grey-300 bg-white p-5 text-center rounded hover:border-brand-red/20 transition-colors duration-200">
        <h4 class="font-semibold text-black mb-2">Statewide Delivery</h4>
        <p class="text-sm text-grey-600">24-48 Hours</p>
      </div>
      <div class="border border-grey-300 bg-white p-5 text-center rounded hover:border-brand-red/20 transition-colors duration-200">
        <h4 class="font-semibold text-black mb-2">Licensed & Insured</h4>
        <p class="text-sm text-grey-600">BBB Accredited</p>
      </div>
    </div>
  </div>
</section>
