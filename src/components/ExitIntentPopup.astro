---
// Exit-intent popup with local delivery guarantee and immediate callback
---

<script is:inline>
  let hasShownPopup = false;
  let mouseLeaveTimer;

  // Detect user's location for personalized messaging
  const referrer = document.referrer;
  let userCity = "";

  if (referrer.includes("/dallas/")) userCity = "Dallas";
  else if (referrer.includes("/houston/")) userCity = "Houston";
  else if (referrer.includes("/austin/")) userCity = "Austin";
  else if (referrer.includes("/fort-worth/")) userCity = "Fort Worth";
  else if (referrer.includes("/arlington/")) userCity = "Arlington";
  else if (referrer.includes("/plano/")) userCity = "Plano";

  function showExitIntentPopup() {
    if (hasShownPopup) return;

    hasShownPopup = true;
    const popup = document.getElementById("exit-intent-popup");
    const overlay = document.getElementById("popup-overlay");

    if (popup && overlay) {
      // Update city-specific messaging
      if (userCity) {
        const citySpans = popup.querySelectorAll(".popup-city");
        citySpans.forEach(function (span) {
          span.textContent = userCity;
        });

        const locationMessage = popup.querySelector(".location-message");
        if (locationMessage) {
          locationMessage.style.display = "block";
        }
      }

      overlay.style.display = "flex";

      // Animate in
      setTimeout(function () {
        popup.style.transform = "translateY(0)";
        popup.style.opacity = "1";
      }, 50);

      // Auto-hide after 30 seconds if no interaction
      setTimeout(function () {
        if (popup.style.opacity === "1") {
          hidePopup();
        }
      }, 30000);
    }
  }

  function hidePopup() {
    const popup = document.getElementById("exit-intent-popup");
    const overlay = document.getElementById("popup-overlay");

    if (popup && overlay) {
      popup.style.transform = "translateY(-50px)";
      popup.style.opacity = "0";

      setTimeout(function () {
        overlay.style.display = "none";
      }, 300);
    }
  }

  function trackConversion(type) {
    // Track conversion for analytics
    try {
      if (typeof window !== "undefined" && window.gtag) {
        window.gtag("event", "exit_intent_conversion", {
          conversion_type: type,
          user_city: userCity || "unknown",
          custom_map: { metric1: 1 },
        });
      }
    } catch (error) {
      console.debug("Analytics tracking failed:", error);
    }

    // You can also send to your analytics platform
    console.log("Exit intent conversion:", type, userCity);
  }

  document.addEventListener("DOMContentLoaded", function () {
    // Detect mouse leave from top of page (exit intent)
    document.addEventListener("mouseleave", function (e) {
      if (e.clientY <= 0 && !hasShownPopup) {
        clearTimeout(mouseLeaveTimer);
        mouseLeaveTimer = window.setTimeout(showExitIntentPopup, 500);
      }
    });

    // Cancel if mouse re-enters quickly
    document.addEventListener("mouseenter", function () {
      clearTimeout(mouseLeaveTimer);
    });

    // Show on mobile after scroll up gesture
    let lastScrollY = window.scrollY;
    let scrollUpCount = 0;

    window.addEventListener("scroll", function () {
      if (window.scrollY < lastScrollY) {
        scrollUpCount++;
        if (scrollUpCount > 3 && !hasShownPopup && window.scrollY > 500) {
          showExitIntentPopup();
        }
      } else {
        scrollUpCount = 0;
      }
      lastScrollY = window.scrollY;
    });

    // Time-based trigger (fallback after 45 seconds)
    setTimeout(() => {
      if (!hasShownPopup && window.scrollY > 1000) {
        showExitIntentPopup();
      }
    }, 45000);

    // Close popup handlers
    document
      .getElementById("close-popup")
      ?.addEventListener("click", hidePopup);
    document
      .getElementById("popup-overlay")
      ?.addEventListener("click", function (e) {
        if (e.target === this) hidePopup();
      });

    // CTA tracking
    document
      .getElementById("popup-phone-cta")
      ?.addEventListener("click", function () {
        trackConversion("phone_call");
      });

    // Track quote form link
    document
      .querySelector('a[href="/contact"]')
      ?.addEventListener("click", function () {
        trackConversion("quote_form");
      });

    // Escape key to close
    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape") hidePopup();
    });
  });
</script>

