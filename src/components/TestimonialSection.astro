---
// Testimonial section component
export interface Props {
  title?: string;
  subtitle?: string;
  testimonials?: Array<{
    quote: string;
    author: string;
    company: string;
    rating?: number;
  }>;
}

const { 
  title = "What Our Customers Say", 
  subtitle = "Don't just take our word for it - hear from satisfied customers across Texas",
  testimonials = [
    {
      quote: "LC Container delivered exactly what we needed for our construction site office. Professional service, quality work, and on-time delivery. Highly recommend!",
      author: "Mike Johnson",
      company: "Johnson Construction Co.",
      rating: 5
    },
    {
      quote: "We've been working with LC Container for over 5 years now. Their custom builds are top-notch and their team is always professional and reliable.",
      author: "Sarah Williams",
      company: "Williams Logistics",
      rating: 5
    },
    {
      quote: "The custom office they built for us exceeded our expectations. Great communication throughout the process and the final product is perfect.",
      author: "David Chen",
      company: "Chen Enterprises",
      rating: 5
    }
  ]
} = Astro.props;
---

<section class="py-16 bg-slate-50 dark:bg-slate-800">
  <div class="content-wrap">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-6">
        {title}
      </h2>
      <p class="text-xl text-slate-700 dark:text-slate-200 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {testimonials.map((testimonial) => (
        <div class="card p-8">
          <div class="flex items-start mb-6">
            <div class="flex text-yellow-500 mr-4">
              {[...Array(testimonial.rating || 5)].map(() => (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
          </div>
          
          <blockquote class="text-slate-700 dark:text-slate-200 mb-6 leading-relaxed">
            "{testimonial.quote}"
          </blockquote>
          
          <div class="flex items-center">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mr-4">
              <span class="text-blue-600 dark:text-blue-400 font-bold text-lg">
                {testimonial.author.charAt(0)}
              </span>
            </div>
            <div>
              <div class="font-semibold text-slate-900 dark:text-white">{testimonial.author}</div>
              <div class="text-sm text-slate-600 dark:text-slate-300">{testimonial.company}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Stats Section -->
    <div class="text-center">
      <h3 class="text-3xl font-bold text-slate-900 dark:text-white mb-8">
        Our Track Record
      </h3>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="text-4xl font-bold text-red-600 dark:text-red-400 mb-2">20+</div>
          <div class="text-slate-700 dark:text-slate-200">Years Experience</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-blue-800 dark:text-blue-300 mb-2">24hr</div>
          <div class="text-slate-700 dark:text-slate-200">Response Time</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold text-slate-600 dark:text-slate-300 mb-2">4.9â˜…</div>
          <div class="text-slate-700 dark:text-slate-200">Average Rating</div>
        </div>
      </div>
    </div>
  </div>
</section>
