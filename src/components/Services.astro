---
// Ultra-compact, transactional Services component for fast container sales
---

<section class="py-8 bg-white">
  <div class="content-wrap">
    <!-- Compact Header -->
    <div class="text-center mb-8">
      <h2 class="text-2xl md:text-3xl font-bold text-black mb-3">
        Container Services
      </h2>
      <p class="text-base text-grey-600 max-w-2xl mx-auto">
        Quality containers for sale or lease. Fast delivery across Texas.
      </p>
    </div>

    <!-- Available Sizes -->
    <div class="border border-grey-300 bg-white p-6 mb-8">
      <h3 class="text-xl font-bold text-black mb-6 text-center">Available Sizes</h3>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        <div class="text-center">
          <div class="text-lg font-semibold text-black mb-2">10'</div>
          <div class="text-sm text-grey-600">Call for Pricing</div>
        </div>
        <div class="text-center">
          <div class="text-lg font-semibold text-black mb-2">20'</div>
          <div class="text-sm text-grey-600">Call for Pricing</div>
        </div>
        <div class="text-center">
          <div class="text-lg font-semibold text-black mb-2">40' Standard</div>
          <div class="text-sm text-grey-600">Call for Pricing</div>
        </div>
        <div class="text-center">
          <div class="text-lg font-semibold text-black mb-2">40' High Cube</div>
          <div class="text-sm text-grey-600">Call for Pricing</div>
        </div>
        <div class="text-center">
          <div class="text-lg font-semibold text-black mb-2">45'</div>
          <div class="text-sm text-grey-600">Call for Pricing</div>
        </div>
        <div class="text-center">
          <div class="text-lg font-semibold text-black mb-2">53'</div>
          <div class="text-sm text-grey-600">Call for Pricing</div>
        </div>
      </div>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-3 gap-4 mb-8">
      <!-- Container Sales -->
      <div class="border border-grey-300 bg-white p-4">
        <h3 class="text-lg font-bold text-black mb-2">
          Container Sales
        </h3>
        
        <p class="text-grey-600 mb-3 text-sm">
          New and used containers. All units inspected and guaranteed wind and water tight.
        </p>
        
        <a 
          href="/contact" 
          class="text-brand-red font-semibold text-sm hover:text-brand-red-dark"
        >
          Get Quote
        </a>
      </div>

      <!-- Container Leasing -->
      <div class="border border-grey-300 bg-white p-4">
        <h3 class="text-lg font-bold text-black mb-2">
          Container Leasing
        </h3>
        
        <p class="text-grey-600 mb-3 text-sm">
          Flexible rental terms. Short and long term leases available with delivery included.
        </p>
        
        <a 
          href="/services/leasing" 
          class="text-brand-red font-semibold text-sm hover:text-brand-red-dark"
        >
          Learn More
        </a>
      </div>

      <!-- Custom Builds -->
      <div class="border border-grey-300 bg-white p-4">
        <h3 class="text-lg font-bold text-black mb-2">
          Custom Builds
        </h3>
        
        <p class="text-grey-600 mb-3 text-sm">
          Offices, retail spaces, and specialty builds. Complete turnkey solutions.
        </p>
        
        <a 
          href="/services/custom-builds" 
          class="text-brand-red font-semibold text-sm hover:text-brand-red-dark"
        >
          Start Project
        </a>
      </div>
    </div>

    <!-- Service Area -->
    <div class="border border-grey-300 bg-white p-6 mb-8">
      <h3 class="text-xl font-bold text-black mb-4 text-center">Service Area</h3>
      
      <div class="grid md:grid-cols-3 gap-3">
        <div class="text-center p-3 border border-grey-300 bg-grey-100">
          <h4 class="font-semibold text-black mb-1 text-sm">DFW Metroplex</h4>
          <p class="text-grey-600 text-xs">Dallas, Fort Worth, Denton</p>
        </div>
        <div class="text-center p-3 border border-grey-300 bg-grey-100">
          <h4 class="font-semibold text-black mb-1 text-sm">East Texas</h4>
          <p class="text-grey-600 text-xs">Tyler, Sulphur Springs</p>
        </div>
        <div class="text-center p-3 border border-grey-300 bg-grey-100">
          <h4 class="font-semibold text-black mb-1 text-sm">Central Texas</h4>
          <p class="text-grey-600 text-xs">Waco, Austin, Houston</p>
        </div>
      </div>
      
      <div class="mt-4 text-center">
        <p class="text-grey-600 text-xs">
          Delivery available within 200-mile radius of Hutchins, TX
        </p>
      </div>
    </div>

    <!-- Fast CTA Section -->
    <div class="text-center">
      <div class="border border-grey-300 bg-grey-100 p-6">
        <h3 class="text-xl font-bold text-black mb-3">
          Ready to Order?
        </h3>
        <p class="text-base text-grey-600 mb-4">
          Get pricing and delivery in 24 hours. Call or request a quote now.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a 
            href="tel:214-524-4168" 
            class="inline-flex items-center justify-center px-6 py-3 bg-brand-red text-white text-base font-bold hover:bg-brand-red-dark"
          >
            Call: 214-524-4168
          </a>
          
          <a 
            href="/contact" 
            class="inline-flex items-center justify-center px-6 py-3 bg-white border border-grey-300 text-black text-base font-semibold hover:bg-grey-100"
          >
            Get Quote Now
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
