---
export interface Props {
  title?: string;
  subtitle?: string;
  processSteps?: Array<{
    step: number;
    title: string;
    description: string;
    icon: string;
    details?: string[];
  }>;
  class?: string;
}

const {
  title = "How We Work",
  subtitle = "Our proven process ensures your custom container project is delivered on time, on budget, and exceeds expectations",
  processSteps = [
    {
      step: 1,
      title: "Initial Consultation",
      description: "We start by understanding your vision, requirements, and budget",
      icon: "M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z",
      details: [
        "Free consultation and site visit",
        "Requirements analysis and planning",
        "Budget discussion and options",
        "Timeline planning and scheduling"
      ]
    },
    {
      step: 2,
      title: "Design & Planning",
      description: "Our team creates detailed plans and specifications for your project",
      icon: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z",
      details: [
        "Custom design and engineering",
        "Material selection and specifications",
        "Permit and code compliance review",
        "Detailed project timeline"
      ]
    },
    {
      step: 3,
      title: "Fabrication & Build",
      description: "Expert craftsmen build your custom container with precision and care",
      icon: "M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z",
      details: [
        "Quality-controlled fabrication",
        "Professional installation of systems",
        "Interior and exterior finishing",
        "Quality inspection and testing"
      ]
    },
    {
      step: 4,
      title: "Delivery & Setup",
      description: "We deliver and install your custom container, ready for immediate use",
      icon: "M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0",
      details: [
        "Professional delivery service",
        "Site preparation and placement",
        "Final installation and setup",
        "Walkthrough and training"
      ]
    }
  ],
  class: className = ''
} = Astro.props;
---

<section class={`py-24 bg-white ${className}`}>
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-bold text-secondary-900 mb-6">
        {title}
      </h2>
      <p class="text-xl text-secondary-600 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>
    
    <!-- Process Steps -->
    <div class="max-w-6xl mx-auto">
      <div class="relative">
        <!-- Connection Line -->
        <div class="hidden lg:block absolute top-1/2 left-0 right-0 h-1 bg-gradient-to-r from-primary-200 via-primary-400 to-primary-200 transform -translate-y-1/2"></div>
        
        <!-- Steps Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {processSteps.map((step, index) => (
            <div class="relative">
              <!-- Step Number -->
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 w-12 h-12 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-xl shadow-lg z-10">
                {step.step}
              </div>
              
              <!-- Step Card -->
              <div class="bg-white rounded-2xl p-8 shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100">
                <!-- Icon -->
                <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
                  <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={step.icon} />
                  </svg>
                </div>
                
                <!-- Content -->
                <h3 class="text-xl font-bold text-secondary-900 mb-4 text-center">
                  {step.title}
                </h3>
                <p class="text-secondary-600 mb-6 text-center leading-relaxed">
                  {step.description}
                </p>
                
                <!-- Details List -->
                {step.details && (
                  <ul class="space-y-2">
                    {step.details.map((detail) => (
                      <li class="flex items-center text-sm text-secondary-700">
                        <svg class="w-4 h-4 text-primary-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        {detail}
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
    
    <!-- Process Benefits -->
    <div class="mt-20 text-center">
      <div class="bg-gradient-to-r from-primary-600 to-primary-700 rounded-3xl p-12 text-white">
        <h3 class="text-3xl font-bold mb-6">Why Our Process Works</h3>
        <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <div class="text-center">
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h4 class="text-xl font-semibold mb-2">Proven Timeline</h4>
            <p class="text-primary-100">Consistent delivery within agreed timelines</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h4 class="text-xl font-semibold mb-2">Quality Guaranteed</h4>
            <p class="text-primary-100">Every project meets our high quality standards</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h4 class="text-xl font-semibold mb-2">Expert Support</h4>
            <p class="text-primary-100">Dedicated team throughout your project</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .shadow-2xl {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }
</style>
