---
// Process section component
export interface Props {
  title?: string;
  subtitle?: string;
  processes?: Array<{
    title: string;
    description: string;
    steps: string[];
  }>;
}

const { 
  title = "Our Process", 
  subtitle = "How we deliver quality containers and custom builds",
  processes = [
    {
      title: "Consultation & Planning",
      description: "We start by understanding your needs and requirements",
      steps: [
        "Initial consultation to understand your project",
        "Site assessment and requirements analysis",
        "Custom solution design and planning",
        "Detailed quote and timeline proposal"
      ]
    },
    {
      title: "Production & Quality Control",
      description: "Expert craftsmanship with rigorous quality standards",
      steps: [
        "Container selection and inspection",
        "Custom modifications and builds",
        "Quality control and testing",
        "Final inspection and preparation"
      ]
    },
    {
      title: "Delivery & Installation",
      description: "Professional delivery and setup at your location",
      steps: [
        "Scheduling and logistics coordination",
        "Professional delivery to your site",
        "Installation and setup assistance",
        "Final walkthrough and customer satisfaction"
      ]
    }
  ]
} = Astro.props;
---

<section class="py-16 bg-white dark:bg-slate-900">
  <div class="content-wrap">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-6">
        {title}
      </h2>
      <p class="text-xl text-slate-700 dark:text-slate-200 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>

    <div class="relative">
      <!-- Process Timeline -->
      <div class="hidden lg:block absolute top-1/2 left-0 right-0 h-0.5 bg-slate-200 dark:bg-slate-700 transform -translate-y-1/2"></div>
      
      <div class="grid lg:grid-cols-3 gap-12">
        {processes.map((process, index) => (
          <div class="relative">
            <!-- Step Number -->
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 w-12 h-12 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-xl shadow-lg z-10">
              {index + 1}
            </div>
            
            <div class="text-center pt-8">
              <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-2xl flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
              
              <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-4 text-center">
                {process.title}
              </h3>
              <p class="text-slate-700 dark:text-slate-200 mb-6 text-center leading-relaxed">
                {process.description}
              </p>
              
              <ul class="space-y-3">
                {process.steps.map((step) => (
                  <li class="flex items-center text-sm text-slate-700 dark:text-slate-200">
                    <svg class="w-4 h-4 text-blue-600 dark:text-blue-400 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {step}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Process Benefits -->
    <div class="mt-20 grid md:grid-cols-3 gap-8">
      <div class="text-center">
        <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-slate-900 dark:text-white mb-2">Fast Delivery</h4>
        <p class="text-slate-700 dark:text-slate-200">Consistent delivery within agreed timelines</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-slate-900 dark:text-white mb-2">Quality Guaranteed</h4>
        <p class="text-slate-700 dark:text-slate-200">Every project meets our high quality standards</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <h4 class="text-lg font-semibold text-slate-900 dark:text-white mb-2">Personal Support</h4>
        <p class="text-slate-700 dark:text-slate-200">Dedicated team throughout your project</p>
      </div>
    </div>
  </div>
</section>
