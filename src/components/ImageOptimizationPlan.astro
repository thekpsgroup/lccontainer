import { INVENTORY } from "../data/inventory";

// Analyze current state and create optimization plan
const analysis = {
  totalImages: 0,
  sharedImages: new Map(),
  sizeSpecific: new Map(['10\'', '20\'', '30\'', '40\''].map(size => [size, []]))
};

// Collect all data
INVENTORY.forEach(container => {
  container.photos.forEach(photo => {
    analysis.totalImages++;

    const filename = photo.split('/').pop();
    if (!analysis.sharedImages.has(filename)) {
      analysis.sharedImages.set(filename, {
        path: photo,
        containers: [],
        sizes: new Set(),
        types: new Set()
      });
    }

    const imgData = analysis.sharedImages.get(filename);
    imgData.containers.push(container.title);
    imgData.sizes.add(container.size);
    imgData.types.add(container.condition);
  });
});

// Categorize images
const recommendations = {
  keepSharing: [],
  makeSizeSpecific: [],
  reviewNeeded: []
};

analysis.sharedImages.forEach((data, filename) => {
  const sizes = Array.from(data.sizes);
  const isCustom = data.path.includes('/custom/');
  const isStandard = data.path.includes('/standard/');

  if (isStandard && sizes.length === 1) {
    // Size-specific standard image - this is perfect
    recommendations.keepSharing.push({ filename, data, reason: 'Size-specific standard image' });
  } else if (isStandard && sizes.length > 1) {
    // Standard image shared across sizes - generally OK
    recommendations.keepSharing.push({ filename, data, reason: 'Standard image shared appropriately' });
  } else if (isCustom && sizes.length === 1) {
    // Size-specific custom image - perfect
    recommendations.keepSharing.push({ filename, data, reason: 'Size-specific custom image' });
  } else if (isCustom && sizes.length > 1) {
    // Custom image shared across sizes - needs review
    recommendations.reviewNeeded.push({ filename, data, reason: 'Custom image shared across sizes' });
  }
});
