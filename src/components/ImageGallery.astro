---
import OptimizedImage from './OptimizedImage.astro';

export interface Props {
  images: Array<{
    src: string;
    alt: string;
    title?: string;
    category?: string;
  }>;
  columns?: 2 | 3 | 4;
  showTitles?: boolean;
  class?: string;
}

const { 
  images, 
  columns = 3, 
  showTitles = false,
  class: className = ''
} = Astro.props;

const gridCols = {
  2: 'grid-cols-1 md:grid-cols-2',
  3: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3',
  4: 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4'
};
---

<div class={`grid gap-6 ${gridCols[columns]} ${className}`}>
  {images.map((image) => (
    <div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
      <OptimizedImage
        src={image.src}
        alt={image.alt}
        width={800}
        height={600}
        class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
      {showTitles && image.title && (
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-4">
          <h3 class="text-white font-semibold text-lg">{image.title}</h3>
          {image.category && (
            <p class="text-gray-200 text-sm">{image.category}</p>
          )}
        </div>
      )}
    </div>
  ))}
</div>

<style>
  .group:hover img {
    transform: scale(1.05);
  }
</style>
