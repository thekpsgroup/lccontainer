---
export interface Props {
  title: string;
  image: string;
  dimensions?: string;
  bullets?: string[];
  ctaHref?: string;
  description?: string;
}

const { title, image, dimensions, bullets = [], ctaHref = "/contact", description } = Astro.props;
---

<div class="card p-6 h-full flex flex-col">
  <!-- Image -->
  <div class="relative mb-4 rounded-lg overflow-hidden">
    <img 
      src={image} 
      alt={title}
      class="w-full h-64 object-contain bg-slate-100 dark:bg-slate-800"
      loading="lazy"
      width="400"
      height="256"
    />
  </div>

  <!-- Content -->
  <div class="flex-1 flex flex-col">
    <h3 class="text-xl font-semibold text-slate-900 dark:text-slate-50 mb-2">
      {title}
    </h3>

    {description && (
      <p class="text-slate-700 dark:text-slate-200 mb-3 leading-6">
        {description}
      </p>
    )}

    {dimensions && (
      <p class="text-sm text-slate-600 dark:text-slate-300 mb-3 font-medium">
        {dimensions}
      </p>
    )}

    {bullets.length > 0 && (
      <ul class="space-y-1 mb-4 flex-1">
        {bullets.slice(0, 3).map((bullet) => (
          <li class="flex items-start text-sm text-slate-700 dark:text-slate-200">
            <svg class="w-4 h-4 text-accent mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            {bullet}
          </li>
        ))}
      </ul>
    )}

    <!-- CTA -->
    <a 
      href={ctaHref}
      class="btn-primary text-center mt-auto"
    >
      Get Free Quote
    </a>
  </div>
</div>
