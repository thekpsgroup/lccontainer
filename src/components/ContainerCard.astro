---
export interface Props {
  title: string;
  image: string;
  dimensions?: string;
  bullets?: string[];
  ctaHref?: string;
  description?: string;
  class?: string;
  style?: string;
}

const { title, image, dimensions, bullets = [], ctaHref = "/contact", description, class: className = '', style = '' } = Astro.props;
---

<div class={`card card-hover p-10 h-full flex flex-col group ${className}`} style={style}>
  <!-- Enhanced Image -->
  <div class="relative mb-8 rounded-3xl overflow-hidden bg-gradient-to-br from-slate-100 to-slate-200 dark:from-slate-700 dark:to-slate-600">
    <img 
      src={image} 
      alt={title}
      class="w-full h-72 object-contain transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
      width="400"
      height="288"
    />
    <!-- Overlay on hover -->
    <div class="absolute inset-0 bg-gradient-to-t from-blue-500/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
  </div>

  <!-- Enhanced Content -->
  <div class="flex-1 flex flex-col">
    <div class="flex items-start justify-between mb-6">
      <h3 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-white group-hover:text-blue-600 transition-colors duration-300 leading-tight">
        {title}
      </h3>
      {dimensions && (
        <div class="px-4 py-2 bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300 text-sm font-medium rounded-full border border-blue-200 dark:border-blue-700/50">
          {dimensions}
        </div>
      )}
    </div>

    {description && (
      <p class="text-slate-700 dark:text-slate-200 mb-8 leading-8 text-lg">
        {description}
      </p>
    )}

    {bullets.length > 0 && (
      <ul class="space-y-4 mb-10 flex-1">
        {bullets.slice(0, 4).map((bullet) => (
          <li class="flex items-start text-slate-700 dark:text-slate-200 group/item">
            <div class="w-6 h-6 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0 group-hover/item:bg-blue-200 dark:group-hover/item:bg-blue-800/50 transition-colors duration-200">
              <svg class="w-3 h-3 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
            </div>
            <span class="text-base leading-7">{bullet}</span>
          </li>
        ))}
      </ul>
    )}

    <!-- Enhanced CTA -->
    <a 
      href={ctaHref}
      class="group/btn relative inline-flex items-center justify-center w-full px-8 py-4 bg-blue-600 text-white text-lg font-semibold rounded-2xl hover:bg-blue-700 shadow-xl hover:shadow-blue-500/25 transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-blue-500/50 mt-auto"
    >
      <span class="relative z-10">Get Free Quote</span>
      <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-blue-700 rounded-2xl opacity-0 group-hover/btn:opacity-100 transition-opacity duration-300"></div>
      <svg class="w-5 h-5 ml-3 group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </a>
  </div>
</div>
