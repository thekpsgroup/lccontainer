---
// Enhanced Local Business Schema with Reviews
export interface Props {
  includeReviews?: boolean;
  includeHours?: boolean;
}

const { includeReviews = true, includeHours = true } = Astro.props;

// Sample reviews data (replace with real reviews from Google My Business API)
const reviews = [
  {
    author: "Mike Johnson",
    rating: 5,
    reviewBody: "Excellent service and fast delivery in Dallas! Got my 20ft container delivered same day and it was in perfect condition.",
    datePublished: "2025-10-15"
  },
  {
    author: "Sarah Williams",
    rating: 5,
    reviewBody: "LC Container provided exactly what we needed for our construction project. Professional team and fair pricing.",
    datePublished: "2025-10-10"
  },
  {
    author: "Robert Chen",
    rating: 5,
    reviewBody: "Great experience from quote to delivery. The container modifications were done perfectly for our office space.",
    datePublished: "2025-10-05"
  },
  {
    author: "Jennifer Martinez",
    rating: 4,
    reviewBody: "Fast delivery and good container quality. Would recommend for storage needs in the DFW area.",
    datePublished: "2025-09-28"
  },
  {
    author: "David Thompson",
    rating: 5,
    reviewBody: "Been using LC Container for 3 years. Always reliable, competitive prices, and excellent customer service.",
