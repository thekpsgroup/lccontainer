---
import { Image } from "astro:assets";
import SmartImage from "./SmartImage.astro";
import CTAButton from "./CTAButton.astro";

const headline = "Shipping Containers for Sale and Lease in Texas";
const sub = "Quality shipping containers with 24-hour quotes and same-day delivery across Texas. Thousands of containers in stock. Call now for immediate pricing.";
---

<section class="bg-grey-100 py-20 md:py-24">
  <div class="max-w-[1200px] mx-auto px-6 md:px-8">
    <div class="text-center hero-fade-in">
      <h1 class="text-4xl md:text-5xl font-bold mb-8 text-black leading-normal">{headline}</h1>
      <p class="text-lg md:text-xl text-grey-700 mb-8 max-w-3xl mx-auto leading-relaxed">{sub}</p>
      
      <div class="mb-8">
        <a href="tel:12145244168" class="text-3xl md:text-4xl font-bold text-brand-red hover:text-brand-red-dark">
          (214) 524-4168
        </a>
      </div>
      
      <div class="mb-12">
        <CTAButton
          size="lg"
          phoneNumber="12145244168"
          data-cta="hero_phone"
          aria-label="Call us now at (214) 524-4168"
        />
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-3xl mx-auto mt-16">
        <div class="text-center p-4 border border-grey-200 bg-white rounded hover:shadow-md hover:border-brand-red/30 transition-all duration-200 hover:-translate-y-1">
          <div class="text-3xl font-bold text-brand-red mb-2">20+</div>
          <div class="text-sm text-grey-600">Years Experience</div>
        </div>
        <div class="text-center p-4 border border-grey-200 bg-white rounded hover:shadow-md hover:border-brand-red/30 transition-all duration-200 hover:-translate-y-1">
          <div class="text-3xl font-bold text-brand-red mb-2">1,000+</div>
          <div class="text-sm text-grey-600">Containers in Stock</div>
        </div>
        <div class="text-center p-4 border border-grey-200 bg-white rounded hover:shadow-md hover:border-brand-red/30 transition-all duration-200 hover:-translate-y-1">
          <div class="text-3xl font-bold text-brand-red mb-2">24-48hr</div>
          <div class="text-sm text-grey-600">Delivery Available</div>
        </div>
        <div class="text-center p-4 border border-grey-200 bg-white rounded hover:shadow-md hover:border-brand-red/30 transition-all duration-200 hover:-translate-y-1">
          <div class="text-3xl font-bold text-brand-red mb-2">Licensed</div>
          <div class="text-sm text-grey-600">& Insured</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-fade-in {
    animation: fadeInUp 0.8s ease-out;
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-fade-in {
      animation: none;
    }
  }
</style>
