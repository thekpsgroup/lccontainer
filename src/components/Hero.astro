---
import { Image } from 'astro:assets';
import SmartImage from './SmartImage.astro';
import CTAButton from './CTAButton.astro';

const headline = "Texas' Premier Container Supplier";
const sub = "Quality shipping containers with <strong>24-hour quotes</strong> and <strong>same-day delivery</strong> across Texas. Thousands of containers in stock.";
---


<section class="relative overflow-hidden">
  <!-- Modern background with soft gradient and image -->
  <div class="absolute inset-0">
    <img
      src="/photos/container/standard/20ft_5.jpg"
      alt="LC Container yard with containers in stock"
      class="h-full w-full object-cover opacity-15"
      loading="eager"
      decoding="async"
      fetchpriority="high"
    />

    <!-- Preload critical LCP image -->
    <link
      rel="preload"
      as="image"
      href="/photos/container/standard/20ft_5.jpg"
      fetchpriority="high"
      type="image/webp"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900/60 via-brand-black/70 to-blue-800/60"></div>
  </div>

  <div class="relative max-w-[1200px] mx-auto px-16 md:px-24 lg:px-32 py-16 md:py-20 lg:py-24 text-center">
    <div class="backdrop-blur-xl bg-white/70 dark:bg-brand-black/80 shadow-2xl rounded-3xl p-8 md:p-12 max-w-3xl mx-auto border border-brand-line/20">
      <h1 class="hero-title mb-8">{headline}</h1>
      <p class="hero-subtitle" set:html={sub}></p>

      <!-- Visual cue arrow -->
      <div class="mt-12 mb-6 animate-bounce">
        <svg class="w-8 h-8 mx-auto text-brand-red" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>

      <!-- Prominent Phone CTA -->
      <div class="mt-12 mb-6">
        <a
          href="tel:12145244168"
          class="inline-flex items-center justify-center gap-3 px-12 py-6 text-2xl md:text-3xl font-extrabold bg-brand-red text-white rounded-2xl shadow-2xl hover:bg-white hover:text-brand-red transform hover:scale-105 transition-all duration-300 animate-pulse-subtle"
          data-cta="hero_phone_primary"
          aria-label="Call us now at (214) 524-4168 for immediate assistance"
        >
          <span class="text-3xl md:text-4xl">ðŸ“ž</span>
          <span>(214) 524-4168</span>
        </a>
      </div>
      
      <p class="text-sm text-ink-muted mb-4">
        Speak with a container expert now | Or request a quote online
      </p>
      
      <div class="flex flex-wrap items-center justify-center gap-4">
        <CTAButton
          variant="secondary"
          size="md"
          href="/contact"
          data-cta="hero_quote"
          aria-label="Request your free quote online"
        >
          Request Online Quote
        </CTAButton>
      </div>
    </div>

    <!-- Modern Trust strip -->
    <div class="mt-24 grid grid-cols-2 sm:grid-cols-4 gap-8 max-w-3xl mx-auto">
      <div class="backdrop-blur bg-white/60 dark:bg-brand-black/60 rounded-xl p-4 text-center text-sm font-semibold shadow">
        Licensed & Insured
      </div>
      <div class="backdrop-blur bg-white/60 dark:bg-brand-black/60 rounded-xl p-4 text-center text-sm font-semibold shadow">
        Quotes in 24h
      </div>
      <div class="backdrop-blur bg-white/60 dark:bg-brand-black/60 rounded-xl p-4 text-center text-sm font-semibold shadow">
        10-Acre Yard
      </div>
      <div class="backdrop-blur bg-white/60 dark:bg-brand-black/60 rounded-xl p-4 text-center text-sm font-semibold shadow">
        200-Mile Service
      </div>
    </div>
  </div>
</section>


