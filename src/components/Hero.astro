---
const headline = "Texas' Premier Container Supplier";
const sub = "Quality shipping containers with <strong>24-hour quotes</strong> and <strong>same-day delivery</strong> across Texas. Thousands of containers in stock.";
---

<section class="relative overflow-hidden">
  <!-- Optimized background with smaller image and better loading -->
  <div class="absolute inset-0">
    <img
      src="/photos/container/standard/20ft_5.jpg"
      alt="LC Container yard with containers in stock"
      class="h-full w-full object-cover opacity-25"
      loading="eager"
      fetchpriority="high"
      decoding="async"
      width="800"
      height="600"
    />
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,rgba(178,34,34,.18),transparent_60%)]"></div>
  </div>

  <div class="relative max-w-[1200px] mx-auto px-5 py-20 md:py-28 text-center">
    <div class="glass p-6 md:p-10 max-w-4xl mx-auto">
      <h1 class="text-2xl md:text-4xl lg:text-5xl font-semibold leading-tight">{headline}</h1>
      <p class="mt-4 text-ink-muted" set:html={sub}></p>
      <div class="mt-6 flex flex-wrap items-center justify-center gap-3">
        <a href="/contact" data-astro-prefetch class="px-5 py-3 rounded-xl bg-brand-red text-white font-semibold hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-brand-silver/60">Get Free Quote</a>
        <a href="tel:12145244168" class="px-5 py-3 rounded-xl border border-brand-line text-ink hover:bg-white/5">Call (214) 524-4168</a>
      </div>
    </div>

    <!-- Trust strip -->
    <div class="mt-8 grid grid-cols-2 sm:grid-cols-4 gap-3 max-w-4xl mx-auto">
      <div class="glass p-3 text-center text-sm">
        <div class="font-semibold">Licensed & Insured</div>
      </div>
      <div class="glass p-3 text-center text-sm">
        <div class="font-semibold">Quotes in 24h</div>
      </div>
      <div class="glass p-3 text-center text-sm">
        <div class="font-semibold">10-Acre Yard</div>
      </div>
      <div class="glass p-3 text-center text-sm">
        <div class="font-semibold">200-Mile Service</div>
      </div>
    </div>
  </div>
</section>


