---
const headline = "Texas' Premier Container Supplier";
const sub = "Quality shipping containers with <strong>24-hour quotes</strong> and <strong>same-day delivery</strong> across Texas. Thousands of containers in stock.";
---


<section class="relative overflow-hidden">
  <!-- Modern background with soft gradient and image -->
  <div class="absolute inset-0">
    <img
      src="/photos/container/standard/20ft_5.jpg"
      alt="LC Container yard with containers in stock"
      class="h-full w-full object-cover opacity-15"
      loading="eager"
      fetchpriority="high"
      decoding="async"
      width="400"
      height="300"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900/60 via-brand-black/70 to-blue-800/60"></div>
  </div>

  <div class="relative max-w-[1200px] mx-auto px-5 py-24 md:py-32 text-center">
    <div class="backdrop-blur-xl bg-white/70 dark:bg-brand-black/80 shadow-2xl rounded-3xl p-10 md:p-16 max-w-3xl mx-auto border border-brand-line/20">
      <h1 class="text-3xl md:text-5xl lg:text-6xl font-extrabold leading-tight tracking-tight text-brand-black dark:text-white drop-shadow mb-4">{headline}</h1>
      <p class="mt-4 text-lg md:text-2xl text-ink-muted font-medium leading-relaxed" set:html={sub}></p>
      <div class="mt-8 flex flex-wrap items-center justify-center gap-5">
        <a href="/contact" data-astro-prefetch class="px-8 py-4 rounded-2xl bg-brand-red text-white text-lg font-bold shadow-lg hover:bg-brand-black/90 hover:scale-105 transition-all focus:outline-none focus:ring-2 focus:ring-brand-silver/60" title="Get a free shipping container quote">Get Free Quote</a>
        <a href="tel:12145244168" class="px-8 py-4 rounded-2xl border-2 border-brand-line text-brand-black dark:text-white text-lg font-bold hover:bg-brand-red/10 shadow focus:outline-none focus:ring-2 focus:ring-brand-silver/60 transition-all">Call (214) 524-4168</a>
      </div>
    </div>

    <!-- Modern Trust strip -->
    <div class="mt-10 grid grid-cols-2 sm:grid-cols-4 gap-4 max-w-3xl mx-auto">
      <div class="backdrop-blur bg-white/60 dark:bg-brand-black/60 rounded-xl p-4 text-center text-sm font-semibold shadow">
        Licensed & Insured
      </div>
      <div class="backdrop-blur bg-white/60 dark:bg-brand-black/60 rounded-xl p-4 text-center text-sm font-semibold shadow">
        Quotes in 24h
      </div>
      <div class="backdrop-blur bg-white/60 dark:bg-brand-black/60 rounded-xl p-4 text-center text-sm font-semibold shadow">
        10-Acre Yard
      </div>
      <div class="backdrop-blur bg-white/60 dark:bg-brand-black/60 rounded-xl p-4 text-center text-sm font-semibold shadow">
        200-Mile Service
      </div>
    </div>
  </div>
</section>


