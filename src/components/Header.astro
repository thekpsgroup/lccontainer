---
const nav = [
  { href: "/", label: "Home" },
  { href: "/services", label: "Services" },
  { href: "/inventory", label: "Inventory" },
  { href: "/about", label: "About" },
  { href: "/contact", label: "Contact" }
];
---
<header class="sticky top-0 z-50 border-b border-brand-line/40 bg-brand-black/80 backdrop-blur">
  <div class="max-w-[1200px] mx-auto px-5 flex h-16 items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img src="/photos/lccontainer-dark.png" alt="LC Container" class="h-9 w-auto" />
      <span class="sr-only">LC Container</span>
    </a>

    <nav class="hidden md:flex items-center gap-6">
      {nav.map(i => (
        <a
          href={i.href}
          data-astro-prefetch
          class="text-sm text-ink-muted hover:text-ink focus:outline-none focus:ring-2 focus:ring-brand-silver/60 rounded"
        >
          {i.label}
        </a>
      ))}
    </nav>

    <div class="hidden md:flex items-center gap-3">
      <a href="tel:12145244168" class="text-sm text-ink-muted hover:text-ink">Call (214) 524-4168</a>
      <a
        href="/contact"
        data-astro-prefetch
        class="px-4 py-2 rounded-xl bg-brand-red text-white text-sm font-semibold hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-brand-silver/60"
      >
        Get Free Quote
      </a>
    </div>

    <!-- Mobile -->
    <details class="md:hidden">
      <summary class="p-2 rounded-lg hover:bg-white/5 cursor-pointer focus:outline-none focus:ring-2 focus:ring-brand-silver/60">â˜°</summary>
      <div class="absolute right-4 mt-2 w-64 glass p-4">
        <nav class="grid gap-2">
          {nav.map(i => <a class="py-2 rounded-lg hover:bg-white/5" href={i.href} data-astro-prefetch>{i.label}</a>)}
        </nav>
        <div class="mt-3 grid gap-2">
          <a href="tel:12145244168" class="text-sm text-ink-muted hover:text-ink">Call (214) 524-4168</a>
          <a href="/contact" data-astro-prefetch class="px-4 py-2 rounded-xl bg-brand-red text-white text-sm font-semibold text-center">Get Free Quote</a>
        </div>
      </div>
    </details>
  </div>
</header>
