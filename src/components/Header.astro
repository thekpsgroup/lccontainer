---
const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-40 bg-white/95 dark:bg-slate-900/95 backdrop-blur-md border-b border-slate-200/60 dark:border-slate-800/60 shadow-lg" id="site-header">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20 lg:h-24">
      <!-- Enhanced Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center group" aria-label="LC Container - Home">
          <img 
            src="/photos/logos/lccontainer-logo-transparent-from-source-400.png" 
            alt="LC Container - Texas Shipping Containers Since 2003" 
            class="h-12 lg:h-16 w-auto transition-transform duration-300 group-hover:scale-105"
            loading="eager"
            width="300"
            height="64"
          />
        </a>
      </div>

      <!-- Enhanced Desktop Navigation -->
      <nav class="hidden lg:flex space-x-8" role="navigation" aria-label="Main navigation">
        <a 
          href="/" 
          class={`text-sm font-semibold transition-all duration-200 hover:text-blue-600 relative group ${
            currentPath === '/' 
              ? 'text-blue-600' 
              : 'text-slate-800 dark:text-slate-200'
          }`}
          aria-current={currentPath === '/' ? 'page' : undefined}
        >
          Home
          <span class={`absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full ${
            currentPath === '/' ? 'w-full' : ''
          }`}></span>
        </a>
        <a 
          href="/services" 
          class={`text-sm font-semibold transition-all duration-200 hover:text-blue-600 relative group ${
            currentPath.startsWith('/services') 
              ? 'text-blue-600' 
              : 'text-slate-800 dark:text-slate-200'
          }`}
          aria-current={currentPath.startsWith('/services') ? 'page' : undefined}
        >
          Services
          <span class={`absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full ${
            currentPath.startsWith('/services') ? 'w-full' : ''
          }`}></span>
        </a>
        <a 
          href="/about" 
          class={`text-sm font-semibold transition-all duration-200 hover:text-blue-600 relative group ${
            currentPath === '/about' 
              ? 'text-blue-600' 
              : 'text-slate-800 dark:text-slate-200'
          }`}
          aria-current={currentPath === '/about' ? 'page' : undefined}
        >
          About
          <span class={`absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full ${
            currentPath === '/about' ? 'w-full' : ''
          }`}></span>
        </a>
        <a 
          href="/gallery" 
          class={`text-sm font-semibold transition-all duration-200 hover:text-blue-600 relative group ${
            currentPath === '/gallery' 
              ? 'text-blue-600' 
              : 'text-slate-800 dark:text-slate-200'
          }`}
          aria-current={currentPath === '/gallery' ? 'page' : undefined}
        >
          Gallery
          <span class={`absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full ${
            currentPath === '/gallery' ? 'w-full' : ''
          }`}></span>
        </a>
        <a 
          href="/contact" 
          class={`text-sm font-semibold transition-all duration-200 hover:text-blue-600 relative group ${
            currentPath === '/contact' 
              ? 'text-blue-600' 
              : 'text-slate-800 dark:text-slate-200'
          }`}
          aria-current={currentPath === '/contact' ? 'page' : undefined}
        >
          Contact
          <span class={`absolute -bottom-1 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300 group-hover:w-full ${
            currentPath === '/contact' ? 'w-full' : ''
          }`}></span>
        </a>
      </nav>

      <!-- Enhanced CTA Button -->
      <div class="hidden lg:flex items-center space-x-6">
        <a 
          href="tel:(214) 524-4168" 
          class="text-sm font-semibold text-slate-800 dark:text-slate-200 hover:text-blue-600 transition-colors duration-200 group"
          aria-label="Call us at (214) 524-4168"
        >
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-2 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            (214) 524-4168
          </div>
        </a>
        <a 
          href="/contact" 
          class="btn-primary"
          aria-label="Get a quote for container services"
        >
          Get Free Quote
        </a>
      </div>

      <!-- Enhanced Mobile menu button -->
      <div class="lg:hidden">
        <button 
          id="mobile-menu-button"
          class="text-slate-800 dark:text-slate-200 hover:text-blue-600 focus:outline-none focus:text-blue-600 p-2 transition-colors duration-200"
          aria-label="Toggle mobile menu"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Enhanced Mobile menu -->
  <div 
    id="mobile-menu" 
    class="lg:hidden hidden bg-white dark:bg-slate-900 border-t border-slate-200/60 dark:border-slate-800/60 shadow-lg"
  >
    <div class="px-4 py-6 space-y-4">
      <a 
        href="/" 
        class={`block text-base font-semibold py-3 px-4 rounded-lg transition-colors duration-200 ${
          currentPath === '/' 
            ? 'text-blue-600 bg-blue-50 dark:bg-blue-900/20' 
            : 'text-slate-800 dark:text-slate-200 hover:text-blue-600 hover:bg-slate-100 dark:hover:bg-slate-800'
        }`}
        aria-current={currentPath === '/' ? 'page' : undefined}
      >
        Home
      </a>
      <a 
        href="/services" 
        class={`block text-base font-semibold py-3 px-4 rounded-lg transition-colors duration-200 ${
          currentPath.startsWith('/services') 
            ? 'text-blue-600 bg-blue-50 dark:bg-blue-900/20' 
            : 'text-slate-800 dark:text-slate-200 hover:text-blue-600 hover:bg-slate-100 dark:hover:bg-slate-800'
        }`}
        aria-current={currentPath.startsWith('/services') ? 'page' : undefined}
      >
        Services
      </a>
      <a 
        href="/about" 
        class={`block text-base font-semibold py-3 px-4 rounded-lg transition-colors duration-200 ${
          currentPath === '/about' 
            ? 'text-blue-600 bg-blue-50 dark:bg-blue-900/20' 
            : 'text-slate-800 dark:text-slate-200 hover:text-blue-600 hover:bg-slate-100 dark:hover:bg-slate-800'
        }`}
        aria-current={currentPath === '/about' ? 'page' : undefined}
      >
        About
      </a>
      <a 
        href="/gallery" 
        class={`block text-base font-semibold py-3 px-4 rounded-lg transition-colors duration-200 ${
          currentPath === '/gallery' 
            ? 'text-blue-600 bg-blue-50 dark:bg-blue-900/20' 
            : 'text-slate-800 dark:text-slate-200 hover:text-blue-600 hover:bg-slate-100 dark:hover:bg-slate-800'
        }`}
        aria-current={currentPath === '/gallery' ? 'page' : undefined}
      >
        Gallery
      </a>
      <a 
        href="/contact" 
        class={`block text-base font-semibold py-3 px-4 rounded-lg transition-colors duration-200 ${
          currentPath === '/contact' 
            ? 'text-blue-600 bg-blue-50 dark:bg-blue-900/20' 
            : 'text-slate-800 dark:text-slate-200 hover:text-blue-600 hover:bg-slate-100 dark:hover:bg-slate-800'
        }`}
        aria-current={currentPath === '/contact' ? 'page' : undefined}
      >
        Contact
      </a>
      
      <!-- Mobile CTA -->
      <div class="pt-4 border-t border-slate-200/60 dark:border-slate-800/60">
        <a 
          href="tel:(214) 524-4168" 
          class="block text-base font-semibold text-slate-800 dark:text-slate-200 hover:text-blue-600 py-3 px-4 rounded-lg transition-colors duration-200"
          aria-label="Call us at (214) 524-4168"
        >
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            (214) 524-4168
          </div>
        </a>
        <a 
          href="/contact" 
          class="btn-primary w-full text-center mt-3"
          aria-label="Get a quote for container services"
        >
          Get Free Quote
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Enhanced mobile menu functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
      
      mobileMenuButton.setAttribute('aria-expanded', !isExpanded);
      
      if (isExpanded) {
        mobileMenu.classList.add('hidden');
        mobileMenuButton.classList.remove('text-blue-600');
      } else {
        mobileMenu.classList.remove('hidden');
        mobileMenuButton.classList.add('text-blue-600');
      }
    });

    // Close mobile menu when clicking outside
    document.addEventListener('click', (event) => {
      if (!mobileMenuButton.contains(event.target) && !mobileMenu.contains(event.target)) {
        mobileMenu.classList.add('hidden');
        mobileMenuButton.setAttribute('aria-expanded', 'false');
        mobileMenuButton.classList.remove('text-blue-600');
      }
    });
  }
</script>
