---
export interface BreadcrumbItem {
  name: string;
  url: string;
}

export interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: items.map((item, index) => ({
    "@type": "ListItem",
    position: index + 1,
    name: item.name,
    item: `https://lccontainer.com${item.url}`,
  })),
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />

<nav aria-label="Breadcrumb" class="text-sm text-grey-600 mb-6">
  <ol class="flex flex-wrap items-center space-x-2">
    {
      items.map((item, index) => (
        <li class="flex items-center">
          {index > 0 && (
            <span class="mx-2 text-grey-400">/</span>
          )}
          {index === items.length - 1 ? (
            <span class="font-semibold text-black">{item.name}</span>
          ) : (
            <a
              href={item.url}
              class="hover:text-brand-red transition-colors"
            >
              {item.name}
            </a>
          )}
        </li>
      ))
    }
  </ol>
</nav>
